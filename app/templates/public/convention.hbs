<section>
  <div class='panel panel-default'>
    <div class='panel-heading'>
      <h4 {{action 'collapseHeader'}}>
        {{#if isCollapsed}}
          {{fa-icon 'caret-right'}}
        {{else}}
          {{fa-icon 'caret-down'}}
        {{/if}}
        &nbsp;{{model.name}}
      </h4>
      <ul class='list-inline'>
        {{#each model.sortedSessions as |session|}}
            <li><h4>{{#link-to 'public.convention.session' session}}{{session.kind}}{{/link-to}}</h4></li>
        {{/each}}
      </ul>
    </div>
      {{#bs-collapse collapsed=isCollapsed}}
        <div class='panel-body'>
          <p>
            <strong>Venue</strong>: {{model.venue.name}}
          </p>
          <p>
            <strong>Dates</strong>: {{model.start_date}}
          </p>
        </div>
      {{/bs-collapse}}
  </div>
</section>
<section>
  <p>
    {{outlet}}
  </p>
</section>
