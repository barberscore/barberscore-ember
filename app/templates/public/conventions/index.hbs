<div>
  <ol class='breadcrumb'>
    <li>{{#link-to 'public.conventions'}}Conventions{{/link-to}}</li>
  </ol>
</div>
<div>
  <table class='table'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Venue</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      {{#each recentConventions as |convention|}}
        <tr>
        <td>{{#link-to 'public.convention' convention}}{{convention.name}}{{/link-to}}</td>
        <td>{{venue-short convention.venue}}</td>
        <td>{{date-range convention.date}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
