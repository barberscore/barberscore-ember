{{#bs-form formLayout="inline" action="saveRecord"}}
  {{#bs-form-group}}
    {{#power-select
      options=levelChoices
      placeholder='Choose convention level.'
      selected=level
      onchange=(action (mut level))
      as |level|
    }}
      {{level}}
    {{/power-select}}
  {{/bs-form-group}}
  {{#bs-form-group}}
    {{bs-input type=tel value=year}}
  {{/bs-form-group}}
  {{bs-button defaultText="Add" type="primary" buttonType="submit"}}
{{/bs-form}}
