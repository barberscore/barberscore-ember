{{#bs-form formLayout="inline" action="saveRecord" class='form-block'}}
  {{#bs-form-group}}
    {{#power-select
      options=sortedPerformers
      placeholder='Search by Performer Name (add Performer from Session if necessary)'
      selected=performer
      searchField='name'
      onchange=(action (mut performer))
      as |performer|
    }}
      {{performer.group.name}}
    {{/power-select}}
  {{/bs-form-group}}
  {{bs-button defaultText="Add" type="primary" buttonType="submit"}}
{{/bs-form}}
