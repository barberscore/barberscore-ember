{{#bs-navbar toggleBreakpoint=null position='sticky-top' class='mb-4' as |navbar|}}
  {{#link-to 'index' active=False class='navbar-brand'}}<span><img src="/assets/bhs_logo_sm.png"></span>&nbsp;Barberscore{{/link-to}}
  {{#navbar.content}}
    {{#navbar.nav class='ml-auto' as |nav|}}
      {{#nav.item}}
        {{#each flashMessages.queue as |flash|}}
          {{#bs-alert type=flash.type dismissible=false fade=true}}
            <p>{{flash.message}}</p>
          {{/bs-alert}}
        {{/each}}
      {{/nav.item}}
    {{/navbar.nav}}
    {{#navbar.nav type='pills' class='ml-auto' as |nav|}}
      {{#if session.isAuthenticated}}
        {{#nav.item}}
          {{#bs-button type='outline-dark' onClick=(action "invalidateSession") }}
            <img src='{{session.data.authenticated.profile.picture}}' width='20'>&nbsp;Logout {{session.data.authenticated.profile.name}}
          {{/bs-button}}
        {{/nav.item}}
      {{else}}
        {{#nav.item}}
          {{#link-to 'login' active=False type='button'}}Login{{/link-to}}
        {{/nav.item}}
      {{/if}}
    {{/navbar.nav}}
  {{/navbar.content}}
{{/bs-navbar}}
<div class='container-fluid'>
  {{outlet}}
</div>