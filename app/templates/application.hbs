<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      {{#bs-button action="toggleCollapsed" class='navbar-toggle collapsed'}}
        {{fa-icon 'reorder'}}
      {{/bs-button}}
      {{#link-to 'public' class='navbar-brand'}}Barberscore{{/link-to}}
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    {{#bs-collapse collapsed=isCollapsed class='navbar-collapse'}}
      <ul class="nav navbar-nav navbar-right">
        <li>
            {{#if session.isAuthenticated}}
              {{#link-to 'admin'}}{{fa-icon 'dashboard'}}&nbsp;Administrator{{/link-to}}
            {{/if}}
        </li>
        {{!-- <li>{{#link-to 'public.conventions'}}{{fa-icon 'trophy'}} Conventions{{/link-to}}</li> --}}
        {{!-- <li>{{#link-to 'organizations'}}{{fa-icon 'university'}} Organizations{{/link-to}}</li> --}}
        {{!-- <li>{{#link-to 'groups'}}{{fa-icon 'group'}} Groups{{/link-to}}</li> --}}
        {{!-- <li>{{#link-to 'persons'}}{{fa-icon 'user'}} Persons{{/link-to}}</li> --}}
        <li>
            {{#if session.isAuthenticated}}
              <a {{action 'logout'}}>Logout</a>
            {{else}}
              <a {{action 'login'}}>Login</a>
            {{/if}}
        </li>
      </ul>
    {{/bs-collapse}}
  </div><!-- /.container-fluid -->
</nav>


<div class='container'>
  <div class='alerts'>
    {{#each flashMessages.queue as |flash|}}
      {{flash-message flash=flash}}
    {{/each}}
  </div>
  {{outlet}}
</div>
