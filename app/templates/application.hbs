{{#bs-navbar as |navbar|}}
  <div class="navbar-header">
    {{#navbar.toggle}}
      {{fa-icon 'reorder'}}
    {{/navbar.toggle}}
    {{#link-to 'index' class='navbar-brand'}}<span>{{cloudinary-image 'bhs_logo' (hash height=30)}}</span>&nbsp;Barberscore{{/link-to}}
  </div>
  {{#navbar.content}}
    {{#navbar.nav type='pills' class='navbar-right' as |nav|}}
      {{#if session.isAuthenticated}}
        {{#nav.item}}
          {{#bs-button onClick=(action "invalidateSession") class='btn-default navcenter pull-right'}}<img src='{{session.data.authenticated.profile.picture}}' width='20'>&nbsp;Logout {{currentUser.user.person.commonName}}
          {{/bs-button}}
        {{/nav.item}}
      {{else}}
        {{#nav.item}}
          {{#link-to 'login'}}Login{{/link-to}}
        {{/nav.item}}
      {{/if}}
    {{/navbar.nav}}
  {{/navbar.content}}
{{/bs-navbar}}

<div class='container'>
  <div class='alerts'>
    {{#each flashMessages.queue as |flash|}}
      {{flash-message flash=flash}}
    {{/each}}
  </div>
  {{!-- <section>
    {{bread-crumbs tagName="ol" outputStyle="bootstrap" linkable=true}}
  </section> --}}
  {{outlet}}
  <div class="footer bottom-bar bottom-spacing">
  <hr>
    <ul class="nav nav-pills">
      <li>{{#link-to 'about'}}About{{/link-to}}</li>
      <li>{{#link-to 'faq'}}FAQ{{/link-to}}</li>
      <li>{{#link-to 'tutorials'}}Tutorials{{/link-to}}</li>
    </ul>
  </div>
</div>