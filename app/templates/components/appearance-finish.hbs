{{#bs-button disabled=model.isDisabled type='primary' onClick=(perform finishAppearance)}}
  {{#if finishAppearance.isRunning}}
    Finishing {{fa-icon "spinner" spin=true}}
  {{else}}
    {{#if (eq model.status 'Started')}}
      Finish Appearance
    {{else if (eq model.status 'Verified')}}
      Re-Open Appearance
    {{/if}}
  {{/if}}
{{/bs-button}}
