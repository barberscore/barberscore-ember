<div class='table-responsive'>
  <table class='table table-hover table-sm'>
    <thead class='thead-light'>
      <tr>
        <th>Include</th>
        <th>Name</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      {{#each sortedContestants as |contestant|}}
        <tr>
          {{#if contestant.isLoading}}
            <td colspan=3>Loading&nbsp;{{fa-icon 'spinner' spin=true}}</td>
          {{else}}
            <td>
              {{input
                type="checkbox"
                checked=contestant.isIncluded
                disabled=contestant.isDisabled
                class='pl-2'
                change=(perform toggleContestant contestant value='target.checked')
              }}
            </td>
            {{#if contestant.contest.award.isLoading}}
              <td colspan=2>Loading&nbsp;{{fa-icon 'spinner' spin=true}}</td>
            {{else}}
              <td>{{contestant.contest.award.name}}</td>
              {{#if contestant.contest.award.description}}
                <td>{{contestant.contest.award.description}}</td>
              {{else}}
                <td>(No description available)</td>
              {{/if}}
            {{/if}}
          {{/if}}
        </tr>
      {{else}}
        <tr>
          <td colspan=2>No contests available</td>
        </tr>
      {{/each}}
    </tbody>
    <tfoot>
      <tr>
        <td colspan=10>
           <em>Click on all the awards for which you wish to compete.</em>
         </td>
      </tr>
    </tfoot>
  </table>
</div>