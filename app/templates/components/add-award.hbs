{{#bs-form formLayout="inline" action="saveRecord" class='form-block'}}
  {{#bs-form-group}}
    {{#power-select
      options=sortedAwards
      placeholder='Search by Award Name'
      selected=award
      onchange=(action (mut award))
      as |award|
    }}
      {{award.name}}
    {{/power-select}}
  {{/bs-form-group}}
  {{bs-button defaultText="Add" type="primary" buttonType="submit"}}
{{/bs-form}}
