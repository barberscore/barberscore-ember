{{#bs-form action="saveRecord"}}
  {{#bs-form-group}}
    {{#power-select selected=model.organization options=organizations onchange=(action (mut model.organization)) as |name|}}
    {{name.name}}
    {{/power-select}}
  {{/bs-form-group}}
  {{#bs-form-group}}
    {{#power-select selected=model.status options=statusChoices onchange=(action (mut model.status)) as |name|}}
    {{name}}
    {{/power-select}}
  {{/bs-form-group}}
  {{#bs-form-group}}
    {{#power-select selected=model.kind options=kindChoices onchange=(action (mut model.kind)) as |name|}}
    {{name}}
    {{/power-select}}
  {{/bs-form-group}}
  {{#bs-form-group}}
    {{#power-select
      search=(action "searchRepo")
      selected=model.drcj
      onchange=(action (mut model.drcj))
      as |repo|
    }}
      {{repo.name}}
    {{/power-select}}
  {{/bs-form-group}}

  {{bs-form-element controlType="text" placeholder="Location" value=model.location}}
  {{bs-button defaultText="Save" type="primary" buttonType="submit"}}
{{/bs-form}}
{{organizations}}
{{model}}