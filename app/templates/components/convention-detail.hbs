{{#bs-form action="saveRecord"}}

  {{#bs-form-group}}
    {{bs-input controlType="text" placeholder="See Dave Binetti if you need to add this" value=model.human_date disabled=true}}
  {{/bs-form-group}}

  {{bs-form-element controlType="text" placeholder="Location" value=model.location}}

  {{#bs-form-group}}
    {{#power-select selected=model.timezone options=timezoneChoices onchange=(action (mut model.timezone)) as |timezone|}}
    {{timezone}}
    {{/power-select}}
  {{/bs-form-group}}

  {{#bs-form-group}}
    {{#power-select
      search=(action "searchPerson")
      placeholder='DRCJ'
      selected=model.drcj
      onchange=(action (mut model.drcj))
      as |repo|
    }}
      {{repo.name}}
    {{/power-select}}
  {{/bs-form-group}}


  {{#bs-form-group}}
    {{#power-select selected=model.status options=statusChoices onchange=(action (mut model.status)) as |status|}}
    {{status}}
    {{/power-select}}
  {{/bs-form-group}}

  {{bs-button defaultText="Save" type="primary" buttonType="submit"}}
{{/bs-form}}
