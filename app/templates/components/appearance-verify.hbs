{{#bs-button
  type='primary'
  disabled=model.isError
  onClick=(action (mut verifyAppearanceModal) true)
}}
  Verify Appearance
{{/bs-button}}
{{#bs-modal
  open=verifyAppearanceModal
  onHidden=(pipe-action (action (mut verifyAppearanceModal) false) (action (mut verifyAppearanceModalError) false))
  as |modal|
}}
  {{#modal.header}}
    <h4>Verify Appearance</h4>
  {{/modal.header}}
  {{#modal.body}}
    <p>
      This will formally verify the appearance.
    </p>
  {{/modal.body}}
  {{#modal.footer}}
    {{#bs-button onClick=(action modal.close) type="default"}}Cancel{{/bs-button}}
    {{#bs-button type='primary' onClick=(perform verifyAppearance)}}
      {{#if verifyAppearance.isRunning}}
        Verifying {{fa-icon "spinner" spin=true}}
      {{else}}
        Verify Appearance
      {{/if}}
    {{/bs-button}}
  {{/modal.footer}}
{{/bs-modal}}
