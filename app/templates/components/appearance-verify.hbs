{{#bs-button
  type='primary'
  disabled=model.isDisabled
  onClick=(perform verifyAppearance)
}}
  {{#if verifyAppearance.isRunning}}
    Verifying... {{fa-icon "spinner" spin=true}}
  {{else}}
    {{#if (eq model.status 'Finished')}}
      Verify Appearance
    {{else if (eq model.status 'Variance')}}
      Verify Variance
    {{else if (eq model.status 'Verified')}}
      Re-Verify Appearance
    {{/if}}
  {{/if}}
{{/bs-button}}
