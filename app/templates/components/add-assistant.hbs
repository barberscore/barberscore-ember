{{#bs-form formLayout="inline" action="saveAssistant"}}
  {{#bs-form-group}}
    {{#power-select
      search=(action "searchPerson")
      placeholder='Search by Person Name'
      selected=person
      searchField='name'
      onchange=(action (mut person))
      as |person|
    }}
      {{person.name}}{{#if person.certifications}}&nbsp;[{{#each person.certifications as |cert|}}{{cert.category}},&nbsp;{{/each}}]{{/if}}
    {{/power-select}}
  {{/bs-form-group}}
  {{#bs-form-group}}
    {{#power-select
      options=assistantCategory
      placeholder='Choose Category'
      selected=category
      onchange=(action (mut category))
      as |category|
    }}
      {{category}}
    {{/power-select}}
  {{/bs-form-group}}
  {{#bs-form-group}}
    {{#power-select
      options=assistantKind
      placeholder='Choose Kind'
      selected=kind
      onchange=(action (mut kind))
      as |kind|
    }}
      {{kind}}
    {{/power-select}}
  {{/bs-form-group}}
  {{bs-button defaultText="Add" type="primary" buttonType="submit"}}
{{/bs-form}}
