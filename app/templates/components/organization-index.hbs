<div class='card'>
  <div class='card-header'>
    <h3>
      Your Organizations
    </h3>
  </div>
  <div class='card-body'>
    <div class='table-responsive'>
      <table class='table'>
        <h6 class='card-title'>You are an active officer for the following organizations:</h6>
        <thead>
          <tr>
            <th class='col-md-1'>Image</th>
            <th>Name</th>
            <th>Kind</th>
          </tr>
        </thead>
        <tbody>
          {{#each sortedGroups as |group|}}
            <tr>
              <td>
                {{#if group.image}}
                  <img src={{group.image}} class='img-fluid rounded'>
                {{else}}
                  <img src='/assets/no_image_available.jpg' class='img-fluid'>
                {{/if}}
              </td>
              <td>
                {{#link-to 'dashboard.groups.group.details' group}}{{group.name}}{{/link-to}}
              </td>
              <td>
                {{group.kind}}
              </td>
            </tr>
          {{else}}
            <tr>
              <td>(You are not listed as an officer for any active groups.  Please check the {{member-center}}.)</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
