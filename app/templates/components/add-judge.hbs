{{#bs-form formLayout="inline" action="saveRecord"}}
  {{#bs-form-group}}
{{#power-select
      search=(action "searchJudge")
      placeholder="Enter Judge Name"
      selected=person
      onchange=(action (mut person))
      as |person|
}}
      {{person.name}}{{#if person.certifications}}&nbsp;[{{#each person.certifications as |cert|}}{{cert.category}},&nbsp;{{/each}}]{{/if}}
{{/power-select}}
  {{/bs-form-group}}
  &nbsp;
  {{#bs-form-group}}
    {{#power-select
      options=judgeCategory
      placeholder='Select Category'
      selected=category
      onchange=(action (mut category))
      as |category|
    }}
      {{category}}
    {{/power-select}}
  {{/bs-form-group}}
  &nbsp;
  {{#bs-form-group}}
    {{#power-select
      options=judgeKind
      placeholder='Select Kind'
      selected=kind
      onchange=(action (mut kind))
      as |kind|
    }}
      {{kind}}
    {{/power-select}}
  {{/bs-form-group}}
  &nbsp;
  {{bs-button defaultText="Add Judge" type="primary" buttonType="submit"}}
{{/bs-form}}
