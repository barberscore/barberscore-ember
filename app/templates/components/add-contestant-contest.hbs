
{{#bs-form formLayout="inline" action="saveRecord" class='form-block'}}
  {{#bs-form-group}}
    {{#power-select
      options=sortedContests
      placeholder='Search by Contest Name (add Performer from Session if necessary)'
      selected=contest
      onchange=(action (mut contest))
      as |contest|
    }}
      {{contest.award.name}}
    {{/power-select}}
  {{/bs-form-group}}
  {{bs-button defaultText="Add" type="primary" buttonType="submit"}}
{{/bs-form}}
