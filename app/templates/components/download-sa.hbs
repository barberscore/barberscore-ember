{{#bs-button
  type='success'
  onClick=(perform sa)
}}
  {{#if sa.isRunning}}
    Downloading {{fa-icon "spinner" spin=true}}
  {{else if sa.last.isError}}
    Error Downloading
  {{else}}
    {{#if (eq model.status 'Finished')}}
      Download <em>Draft</em> SA&nbsp;&nbsp;{{fa-icon 'file-pdf-o'}}
    {{else}}
      Download <strong>Final</strong> SA&nbsp;&nbsp;{{fa-icon 'file-pdf-o'}}
    {{/if}}
  {{/if}}
{{/bs-button}}