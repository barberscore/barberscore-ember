<ul class='list-styled'>
  {{#each sortedGrantors as |grantor|}}
    {{#if grantor.group.isLoading}}
      <li>
        Loading&nbsp;{{fa-icon 'spinner' spin=true}}
      </li>
    {{else}}
      <li>
        {{grantor.group.name}}
      </li>
    {{/if}}
    {{grantor-groups model=grantor}}
  {{else}}
    <tr>
      <td>(No grantors.)</td>
    </tr>
  {{/each}}
</ul>