{{!-- <div class='table-responsive'> --}}
  <table class='table table-hover table-sm'>
    <caption>Penalties</caption>
    <thead class='thead-light'>
      <tr>
        <th>Song</th>
        <th>Violation</th>
      </tr>
    </thead>
    <tbody>
      {{#each sortedSongs as |song|}}
        <tr>
          <td>
            {{song.chart.title}}
          </td>
          <td>
            {{#power-select-multiple
              options=song.penaltyOptions
              selected=song.penalties
              onchange=(perform autosave song)
              placeholder="(No Penalties)"
              allowClear=true
              disabled=song.isDisabled
              as |penalties|
            }}
              {{map-penalty penalties}}
            {{/power-select-multiple}}
          </td>
        </tr>
      {{else}}
        <tr>
          <td>(No songs.)</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{!-- </div> --}}