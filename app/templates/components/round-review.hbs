{{#bs-button
  type='primary'
  disabled=model.isError
  onClick=(action (mut reviewRoundModal) true)
}}
  Review Round
{{/bs-button}}
{{#bs-modal
  open=reviewRoundModal
  onHidden=(pipe-action (action (mut reviewRoundModal) false) (action (mut reviewRoundModalError) false))
  as |modal|
}}
  {{#modal.header}}
    <h4>Review Round</h4>
  {{/modal.header}}
  {{#modal.body}}
    <p>
        This generates draft versions of the OSS, CSA and SA for the CA to review.  They are not made public until the next step, so you are free to review and re-review as necessary until the reports are accurate.
    </p>
    {{#if reviewRoundModalError}}
    <p class='text-danger'>
      Could not Review Round.
    </p>
    {{/if}}
  {{/modal.body}}
  {{#modal.footer}}
    {{#bs-button onClick=(action modal.close) type="default"}}Cancel{{/bs-button}}
    {{#bs-button type='primary' disabled=model.isError onClick=(perform reviewRound)}}
      {{#if reviewRound.isRunning}}
        Reviewing {{fa-icon "spinner" spin=true}}
      {{else}}
        Review Round
      {{/if}}
    {{/bs-button}}
  {{/modal.footer}}
{{/bs-modal}}
