<div class='card'>
  <div class='card-header'>
    <h3>
      Your Assignments
    </h3>
  </div>
  <div class='card-body'>
    <div class='table-responsive'>
      <table class='table'>
        <h6 class='card-title'>These are the conventions to which you are currently assigned.</h6>
        <thead>
          <tr>
            <th class='col-md-1'>Image</th>
            <th>Name</th>
            <th>Venue</th>
            <th>Date</th>
            <th>Kind</th>
            <th>Category</th>
          </tr>
        </thead>
        <tbody>
          {{#each sortedAssignments as |assignment|}}
            <tr>
              <td>
                {{#if assignment.convention.image}}
                  <img src={{assignment.convention.image}} class='img-fluid rounded'>
                {{else}}
                  <img src='/assets/no_image_available.jpg' class='img-fluid'>
                {{/if}}
              </td>
              <td>
                {{#link-to 'dashboard.conventions.convention.details' assignment.convention}}{{assignment.convention.name}}{{/link-to}}
              </td>
              <td>
                {{assignment.convention.venue.name}}<br>
                {{assignment.convention.venue.city}},  {{assignment.convention.venue.state}}
              </td>
              <td>
                {{moment-format assignment.convention.startDate 'L'}} - {{moment-format assignment.convention.endDate 'L'}}
              </td>
              <td>
                {{assignment.kind}}
              </td>
              <td>
                {{assignment.category}}
              </td>
            </tr>
          {{else}}
            <tr>
              <td></td>
              <td>(You do not have any current assignments.  Please check with David Mills or Chris Buechler if you believe this is in error.)</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
