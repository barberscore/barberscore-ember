<section>
  <div class='panel panel-default'>
    <div class='panel-heading fixed-panel-header'>
      <ul class='list-inline pull-right'>
        {{#if (has-previous model sortedContests)}}
          <li>
            {{#bs-button onClick=(action (mut model) (previous model sortedContests))}}
             Previous
            {{/bs-button}}
          </li>
        {{else}}
          <li>
            {{#bs-button disabled=true onClick=(action (mut model) (previous model sortedContests))}}
               Previous
            {{/bs-button}}
          </li>
        {{/if}}
        {{#if (has-next model sortedContests)}}
          <li>
            {{#bs-button onClick=(action (mut model) (next model sortedContests))}}
              Next
            {{/bs-button}}
          </li>
        {{else}}
          <li>
            {{#bs-button disabled=true onClick=(action (mut model) (next model sortedContests))}}
              Next
            {{/bs-button}}
          </li>
        {{/if}}
      </ul>
      <h4>
        {{model.award.name}}
      </h4>
    </div>
    <div class='panel-body'>
      <section>
        {{#power-select
          options=model.groupOptions
          selected=model.group
          onchange=(action (mut model.group))
          onclose=(action "saveModel" model)
          placeholder="Choose Award Winner"
          searchField='name'
          allowClear=true
          disabled=model.isDisabled
          as |group|
        }}
          Winner: {{group.name}}
        {{/power-select}}
      </section>
      <section>

      </section>
    </div>
    <div class='panel-footer fixed-panel-footer'>
      {{!-- <ul class='list-inline'>
        {{#if (eq model.round.status 'Built')}}
          {{#if model.permissions.write}}
              <li>{{contest-delete model=model}}</li>
          {{/if}}
        {{/if}}
        <li class='pull-right'><h4>Contest Status: <strong>{{model.status}}</strong></h4></li>
      </ul> --}}
    </div>
  </div>
</section>
