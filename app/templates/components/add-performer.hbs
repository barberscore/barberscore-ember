{{#bs-form action="saveRecord"}}
  {{#bs-form-group}}
    {{#power-select
      search=(action "searchGroup")
      placeholder='Search by Group Name'
      selected=group
      onchange=(action (mut group))
      as |group|
    }}
      {{group.name}}
    {{/power-select}}
  {{/bs-form-group}}
  {{#bs-form-group}}
{{#power-select
      search=(action "searchOrganization")
      placeholder='Search by Organization Name'
      selected=organization
      onchange=(action (mut organization))
      as |organization|
}}
  {{organization.name}}
{{/power-select}}
  {{/bs-form-group}}
  {{bs-button defaultText="Save" type="primary" buttonType="submit"}}
{{/bs-form}}
