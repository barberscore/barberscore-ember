{{#bs-form formLayout="inline" action="saveRecord"}}
  {{#bs-form-group}}
    {{#power-select
      search=(action "searchGroup")
      placeholder='Search by Group Name'
      selected=group
      onchange=(action (mut group))
      as |group|
    }}
      {{group.name}}
    {{/power-select}}
  {{/bs-form-group}}
  {{bs-button defaultText="Add" type="primary" buttonType="submit"}}
{{/bs-form}}
