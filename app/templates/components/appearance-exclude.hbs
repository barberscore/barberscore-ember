{{#bs-button
  type='primary'
  disabled=model.isError
  onClick=(action (mut excludeAppearanceModal) true)
}}
  Exclude Appearance
{{/bs-button}}
{{#bs-modal
  open=excludeAppearanceModal
  onHidden=(pipe-action (action (mut excludeAppearanceModal) false) (action (mut excludeAppearanceModalError) false))
  as |modal|
}}
  {{#modal.header}}
    <h4>Exclude Appearance</h4>
  {{/modal.header}}
  {{#modal.body}}
    <p>
      This will formally exclude the appearance.
    </p>
  {{/modal.body}}
  {{#modal.footer}}
    {{#bs-button onClick=(action modal.close) type="default"}}Cancel{{/bs-button}}
    {{#bs-button type='primary' onClick=(perform excludeAppearance)}}
      {{#if excludeAppearance.isRunning}}
        Excludeing {{fa-icon "spinner" spin=true}}
      {{else}}
        Exclude Appearance
      {{/if}}
    {{/bs-button}}
  {{/modal.footer}}
{{/bs-modal}}
