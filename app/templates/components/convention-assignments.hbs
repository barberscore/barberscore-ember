<div class='table-responsive'>
  <h3>
    Assignments
  </h3>
  <table class='table'>
    <caption>These are the assignments for this convention.</caption>
    <thead>
      <tr>
        <th class='col-md-1'>Image</th>
        <th>Person</th>
        <th>Kind</th>
        <th>Category</th>
        <th>Email</th>
        <th>Phone</th>
      </tr>
    </thead>
    <tbody>
      {{#each sortedAssignments as |assignment|}}
        <tr>
          <td>
            {{#if assignment.person.image}}
              <img src={{assignment.person.image}} class='img-responsive img-rounded'>
            {{else}}
              <img src='/assets/no_image_available.jpg' class='img-responsive'>
            {{/if}}
          </td>
          <td>
            {{assignment.person.commonName}}
          </td>
          <td>
            {{assignment.kind}}
          </td>
          <td>
            {{assignment.category}}
          </td>
          <td><a href='mailto:{{assignment.person.email}}'>{{assignment.person.email}}</a></td>
          <td><a href='tel:{{assignment.person.cellPhone}}'>{{assignment.person.cellPhone}}</a></td>
        </tr>
      {{else}}
        <tr>
          <td>(You do not have any current assignments.  Please check with David Mills or Chris Buechler if you believe this is in error.)</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
