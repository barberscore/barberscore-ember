<section>
  <div class='row'>
    <div class='col-md-3'>
      <table class='table'>
        <thead>
          <tr>
            <th class='col-md-1'>OA</th>
            <th class='col-md-1'>Name</th>
            {{!-- <th class='col-md-1'>Status</th> --}}
          </tr>
        </thead>
        <tbody>
          {{#each sortedAppearances as |appearance|}}
            <tr>
              <td>{{appearance.num}}</td>
              <td>{{#link-to 'rounds.round.appearances.appearance' appearance}}{{appearance.entry.entity.name}}{{/link-to}}</td>
              {{!-- <td>{{appearance.status}}</td> --}}
            </tr>
          {{else}}
            <tr>
              <td>(No entries.)</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class='col-md-9'>
      {{outlet}}
    </div>
  </div>
</section>