<section>
  <div class='panel panel-default'>
    <div class='panel-heading'>
      <h4>
        Order of Appearance
      </h4>
    </div>
      <div class='panel-body'>
        <table class='table'>
          <thead>
            <tr>
              <th>OA</th>
              <th>Name</th>
            </tr>
          </thead>
          <tbody>
            {{#each sortedPerformances as |performance|}}
              <tr>
                <td>
                  {{performance.num}}
                </td>
                <td>
                  {{#link-to 'dashboard.scoring-manager.session.rounds.round.performances.performance' performance}}{{performance.entry.group.name}}{{/link-to}}<br>
                  {{performance.entry.group.chapter.name}}
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
  </div>
</section>
<section>
  {{outlet}}
</section>
