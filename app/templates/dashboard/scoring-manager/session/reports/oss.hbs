<section>
<h3>
  Official Scoring Summary
</h3>
</section>
<section>
{{!-- {{x-toggle showLabels=true offLabel='Points' onLabel='Score' toggle='letsGo'}} --}}
<div class='table-responsive'>
<table class='table'>
  <thead>
  <tr>
  <th>Rank</th>
  <th>Group</th>
  <th>Songs</th>
  <th class='text-right'>MUS</th>
  <th class='text-right'>PRS</th>
  <th class='text-right'>SNG</th>
  <th class='text-right'>Total</th>
  {{!-- {{#each model.contests as |contest|}}
    <th class='text-right'>{{contest.award.name}}</th>
  {{/each}} --}}
  </tr>
  </thead>
  <tbody>
  {{#each sortedPerformers as |performer|}}
    <tr>
    <td>
      {{performer.performerscore.rank}}
    </td>
    <td>
      {{performer.group.name}}
      {{#if (eq performer.group.kind 'Chorus')}}{{performer.group.chapter.name}}{{/if}}
    </td>
    <td>
      {{#each performer.performances as |performance|}}
        {{#each performance.songs as |song|}}
          {{truncate-text song.submission.title limit=50}}<br>
        {{/each}}
        {{#if (not-eq performer.performances.length 1)}}<em>{{performance.round.kind}}</em><br>{{/if}}
      {{/each}}
      <strong>Total</strong>
    </td>
    <td class='text-right'>
      {{#each performer.performances as |performance|}}
        {{#each performance.songs as |song|}}
          {{#if isRaw}}{{song.songscore.mus_points}}{{else}}{{single-fixed song.songscore.mus_score}}{{/if}}<br>
        {{/each}}
        {{#if (not-eq performer.performances.length 1)}}<em>{{#if isRaw}}{{performance.performancescore.mus_points}}{{else}}{{single-fixed performance.performancescore.mus_score}}{{/if}}</em><br>{{/if}}
      {{/each}}
      <strong>{{#if isRaw}}{{performer.performerscore.mus_points}}{{else}}{{single-fixed performer.performerscore.mus_score}}{{/if}}</strong><br>

    </td>
    <td class='text-right'>
      {{#each performer.performances as |performance|}}
        {{#each performance.songs as |song|}}
          {{#if isRaw}}{{song.songscore.prs_points}}{{else}}{{single-fixed song.Æ’}}{{/if}}<br>
        {{/each}}
        {{#if (not-eq performer.performances.length 1)}}<em>{{#if isRaw}}{{performance.performancescore.prs_points}}{{else}}{{single-fixed performance.performancescore.prs_score}}{{/if}}</em><br>{{/if}}
      {{/each}}
      <strong>{{#if isRaw}}{{performer.performerscore.prs_points}}{{else}}{{single-fixed performer.performerscore.prs_score}}{{/if}}</strong><br>
    </td>
    <td class='text-right'>
      {{#each performer.performances as |performance|}}
        {{#each performance.songs as |song|}}
          {{#if isRaw}}{{song.songscore.sng_points}}{{else}}{{single-fixed song.songscore.sng_score}}{{/if}}<br>
        {{/each}}
        {{#if (not-eq performer.performances.length 1)}}<em>{{#if isRaw}}{{performance.performancescore.sng_points}}{{else}}{{single-fixed performance.performancescore.sng_score}}{{/if}}</em><br>{{/if}}
      {{/each}}
      <strong>{{#if isRaw}}{{performer.performerscore.sng_points}}{{else}}{{single-fixed performer.performerscore.sng_score}}{{/if}}</strong><br>
    </td>
    <td class='text-right'>
      {{#each performer.performances as |performance|}}
        {{#each performance.songs as |song|}}
          {{#if isRaw}}{{song.songscore.total_points}}{{else}}{{single-fixed song.songscore.total_score}}{{/if}}<br>
        {{/each}}
        {{#if (not-eq performer.performances.length 1)}}<em>{{#if isRaw}}{{performance.performancescore.total_points}}{{else}}{{single-fixed performance.performancescore.total_score}}{{/if}}</em><br>{{/if}}
      {{/each}}
      <strong>{{#if isRaw}}{{performer.performerscore.total_points}}{{else}}{{single-fixed performer.performerscore.total_score}}{{/if}}</strong><br>
    </td>
    </tr>
  {{/each}}
  </tbody>
</table>
</div>
</section>
<section>
  <h4>Contests</h4>
    <ul class='list-unstyled'>
      {{#each model.contests as |contest|}}
        <li>{{contest.award.name}} Champion: {{contest.contestscore.champion}}</li>
      {{/each}}
    </ul>
</section>
<section>
  <h4>Assignments</h4>
    <ul class='list-unstyled'>
      {{#each model.assignments as |assignment|}}
        <li>{{assignment.designation}}: {{assignment.judge.person.common_name}}</li>
      {{/each}}
    </ul>
</section>
