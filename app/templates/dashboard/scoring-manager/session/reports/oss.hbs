<section>
<h3>
  Official Scoring Summary
</h3>
</section>
<section>
{{!-- {{x-toggle showLabels=true offLabel='Points' onLabel='Score' toggle='letsGo'}} --}}
<div class='table-responsive'>
<table class='table'>
  <thead>
  <tr>
  <th>Rank</th>
  <th>Group</th>
  <th>Songs</th>
  <th class='text-right'>MUS</th>
  <th class='text-right'>PRS</th>
  <th class='text-right'>SNG</th>
  <th class='text-right'>Total</th>
  {{!-- {{#each model.contests as |contest|}}
    <th class='text-right'>{{contest.award.name}}</th>
  {{/each}} --}}
  </tr>
  </thead>
  <tbody>
  {{#each sortedEntries as |entry|}}
    <tr>
    <td>
      {{entry.entryprivate.rank}}
    </td>
    <td>
      {{entry.group.name}}
      {{#if (eq entry.group.kind 'Chorus')}}{{entry.group.chapter.name}}{{/if}}
    </td>
    <td>
      {{#each entry.appearances as |appearance|}}
        {{#each appearance.songs as |song|}}
          {{truncate-text song.submission.title limit=50}}<br>
        {{/each}}
        {{#if (not-eq entry.appearances.length 1)}}<em>{{appearance.round.kind}}</em><br>{{/if}}
      {{/each}}
      <strong>Total</strong>
    </td>
    <td class='text-right'>
      {{#each entry.appearances as |appearance|}}
        {{#each appearance.songs as |song|}}
          {{#if isRaw}}{{song.songprivate.mus_points}}{{else}}{{single-fixed song.songprivate.mus_score}}{{/if}}<br>
        {{/each}}
        {{#if (not-eq entry.appearances.length 1)}}<em>{{#if isRaw}}{{appearance.appearanceprivate.mus_points}}{{else}}{{single-fixed appearance.appearanceprivate.mus_score}}{{/if}}</em><br>{{/if}}
      {{/each}}
      <strong>{{#if isRaw}}{{entry.entryprivate.mus_points}}{{else}}{{single-fixed entry.entryprivate.mus_score}}{{/if}}</strong><br>

    </td>
    <td class='text-right'>
      {{#each entry.appearances as |appearance|}}
        {{#each appearance.songs as |song|}}
          {{#if isRaw}}{{song.songprivate.prs_points}}{{else}}{{single-fixed song.Æ’}}{{/if}}<br>
        {{/each}}
        {{#if (not-eq entry.appearances.length 1)}}<em>{{#if isRaw}}{{appearance.appearanceprivate.prs_points}}{{else}}{{single-fixed appearance.appearanceprivate.prs_score}}{{/if}}</em><br>{{/if}}
      {{/each}}
      <strong>{{#if isRaw}}{{entry.entryprivate.prs_points}}{{else}}{{single-fixed entry.entryprivate.prs_score}}{{/if}}</strong><br>
    </td>
    <td class='text-right'>
      {{#each entry.appearances as |appearance|}}
        {{#each appearance.songs as |song|}}
          {{#if isRaw}}{{song.songprivate.sng_points}}{{else}}{{single-fixed song.songprivate.sng_score}}{{/if}}<br>
        {{/each}}
        {{#if (not-eq entry.appearances.length 1)}}<em>{{#if isRaw}}{{appearance.appearanceprivate.sng_points}}{{else}}{{single-fixed appearance.appearanceprivate.sng_score}}{{/if}}</em><br>{{/if}}
      {{/each}}
      <strong>{{#if isRaw}}{{entry.entryprivate.sng_points}}{{else}}{{single-fixed entry.entryprivate.sng_score}}{{/if}}</strong><br>
    </td>
    <td class='text-right'>
      {{#each entry.appearances as |appearance|}}
        {{#each appearance.songs as |song|}}
          {{#if isRaw}}{{song.songprivate.total_points}}{{else}}{{single-fixed song.songprivate.total_score}}{{/if}}<br>
        {{/each}}
        {{#if (not-eq entry.appearances.length 1)}}<em>{{#if isRaw}}{{appearance.appearanceprivate.total_points}}{{else}}{{single-fixed appearance.appearanceprivate.total_score}}{{/if}}</em><br>{{/if}}
      {{/each}}
      <strong>{{#if isRaw}}{{entry.entryprivate.total_points}}{{else}}{{single-fixed entry.entryprivate.total_score}}{{/if}}</strong><br>
    </td>
    </tr>
  {{/each}}
  </tbody>
</table>
</div>
</section>
<section>
  <h4>Contests</h4>
    <ul class='list-unstyled'>
      {{#each model.contests as |contest|}}
        <li>{{contest.award.name}} Champion: {{contest.contestprivate.champion}}</li>
      {{/each}}
    </ul>
</section>
<section>
  <h4>Assignments</h4>
    <ul class='list-unstyled'>
      {{#each model.assignments as |assignment|}}
        <li>{{assignment.designation}}: {{assignment.judge.person.common_name}}</li>
      {{/each}}
    </ul>
</section>
