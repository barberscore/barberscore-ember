<section>
  <div class='row'>
    <div class='col-md-8'>
      <table class='table'>
        <thead>
          <tr>
            <th class='col-md-4'>Name</th>
            <th class='col-md-2'>Category</th>
            <th class='col-md-2'>Kind</th>
            <th class='col-md-1'>Status</th>
          </tr>
        </thead>
        <tbody>
          {{#each sortedAssignments as |assignment|}}
            <tr>
              {{#if assignment.isLoading}}
                <td colspan=4>Loading...&nbsp;{{fa-icon 'spinner' spin=true}}</td>
              {{else}}
                {{#if assignment.person.isLoading}}
                  <td colspan=1>Loading...&nbsp;{{fa-icon 'spinner' spin=true}}</td>
                {{else}}
                  <td>{{#link-to 'dashboard.convention-manager.convention.assignments.assignment' assignment}}{{assignment.person.commonName}}{{/link-to}}</td>
                {{/if}}
                <td>{{assignment.category}}</td>
                <td>{{assignment.kind}}</td>
                <td>{{assignment.status}}</td>
              {{/if}}
            </tr>
          {{else}}
            <tr>
              <td colspan=3>No Assignments.</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>
<section>
  {{#bs-button onClick=(action 'createAssignment') type='success'}}Create New Assignment{{/bs-button}}
</section>