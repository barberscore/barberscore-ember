{{#bs-form
  model=this
  formLayout='vertical'
  onSubmit=(action 'createConvention')
  as |form|
}}
  {{form.element
    controlType='text'
    placeholder='Convention Name'
    property='name'
    disabled=isDisabled
  }}
  {{#form.element property='entity' useIcons=false as |el|}}
    {{#power-select
      renderInPlace=true
      options=entityOptions
      selected=el.value
      onchange=(action (mut el.value))
      placeholder="Choose Convention Owner Entity"
      disabled=isDisabled
      allowClear=true
      as |entity|
    }}
      Entity: {{entity.name}}
    {{/power-select}}
  {{/form.element}}
  {{#form.element property='season' useIcons=false as |el|}}
    {{#power-select
      renderInPlace=true
      options=seasonOptions
      selected=el.value
      onchange=(action (mut el.value))
      placeholder="Choose Season"
      disabled=isDisabled
      allowClear=true
      as |season|
    }}
      Season: {{season}}
    {{/power-select}}
  {{/form.element}}
  {{form.element
    controlType='text'
    placeholder='Location'
    property='location'
    disabled=isDisabled
  }}
  {{#form.element property='openDate' useIcons=false as |el|}}
    {{bs-datetimepicker
      date=el.value
      format='YYYY-MM-DD'
      updateDate=(action (mut el.value))
      placeholder="Convention Entry OpenDate"
      disabled=isDisabled
    }}
  {{/form.element}}
  {{#form.element property='closeDate' useIcons=false as |el|}}
    {{bs-datetimepicker
      date=el.value
      format='YYYY-MM-DD'
      updateDate=(action (mut el.value))
      placeholder="Convention Entry Close Date"
      disabled=isDisabled
    }}
  {{/form.element}}
  {{#form.element property='startDate' useIcons=false as |el|}}
    {{bs-datetimepicker
      date=el.value
      format='YYYY-MM-DD'
      updateDate=(action (mut el.value))
      placeholder="Convention Start Date"
      disabled=isDisabled
    }}
  {{/form.element}}
  {{#form.element property='endDate' useIcons=false as |el|}}
    {{bs-datetimepicker
      date=el.value
      format='YYYY-MM-DD'
      updateDate=(action (mut el.value))
      placeholder="Convention End Date"
      disabled=isDisabled
    }}
  {{/form.element}}
  {{#form.element property='panel' useIcons=false as |el|}}
    {{#power-select
      renderInPlace=true
      options=panelOptions
      selected=el.value
      onchange=(action (mut el.value))
      placeholder="Choose Panel"
      disabled=isDisabled
      allowClear=true
      as |panel|
    }}
      Panel: {{panel}}
    {{/power-select}}
  {{/form.element}}
  {{#form.element property='risers' useIcons=false as |el|}}
    {{#power-select-multiple
      renderInPlace=true
      options=riserOptions
      selected=el.value
      onchange=(action (mut el.value))
      placeholder="Choose Riser Options"
      disabled=isDisabled
      allowClear=true
      as |risers|
    }}
      Risers: {{risers}}
    {{/power-select-multiple}}
  {{/form.element}}
{{/bs-form}}