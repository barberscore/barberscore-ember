<section>
  <div class='panel panel-default'>
    <div class='panel-heading fixed-panel-header'>
      <h4>(New Entry)</h4>
    </div>
    <div class='panel-body'>
      {{#bs-form
        model=model
        formLayout='vertical'
        onSubmit=(action 'saveEntry')
        as |form|
      }}
        {{#form.element property='group' as |el|}}
            {{#power-select
              search=(perform searchGroup)
              selected=el.value
              onchange=(action (mut el.value))
              placeholder="Enter Group Name"
              allowClear=true
              as |group|
            }}
              Group: {{group.nomen}} {{#if group.parent.shortName}}({{group.parent.shortName}}){{/if}}
            {{/power-select}}
        {{/form.element}}
        {{#bs-button type="default" onClick=(action 'cancelEntry')}}Cancel{{/bs-button}}
        {{#bs-button type="primary" buttonType="submit"}}Save{{/bs-button}}
      {{/bs-form}}
    </div>
  </div>
</section>
