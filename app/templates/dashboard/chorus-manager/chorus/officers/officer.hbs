<section>
  <div class='panel panel-default'>
    <div class='panel-heading'>
      <h4 class='pull-right'>
        Status: <strong>{{model.status}}</strong>
      </h4>
      <h4>
        {{model.nomen}}
      </h4>
    </div>
    <div class='panel-body'>
      <section>
        {{#bs-form
          formLayout="vertical"
          model=model
          as |form|
        }}
          {{#form.element property='person' useIcons=false as |el|}}
            {{#power-select
              options=null
              selected=el.value
              disabled=true
              onchange=(action (mut el.value))
              as |person|
            }}
              Person: {{person.common_name}}
            {{/power-select}}
          {{/form.element}}
          {{#form.element property='office' useIcons=false as |el|}}
            {{#power-select
              options=null
              selected=el.value
              onchange=(action (mut el.value))
              disabled=true
              as |office|
            }}
              Office: {{office.name}}
            {{/power-select}}
          {{/form.element}}
            {{!-- <div class='row'>
              <div class='col-md-3'>
                {{#form.element property='start_date' useIcons=false as |el|}}
                  {{bs-datetimepicker
                    date=el.value
                    format='YYYY-MM-DD'
                    updateDate=(action (mut el.value))
                    placeholder="Officer Start Date"
                    disabled=isDisabled
                  }}
                {{/form.element}}
              </div>
              <div class='col-md-3'>
                {{#form.element property='end_date' useIcons=false as |el|}}
                  {{bs-datetimepicker
                    date=el.value
                    format='YYYY-MM-DD'
                    updateDate=(action (mut el.value))
                    placeholder="Officer End Date"
                    clearBtn=true
                    disabled=isDisabled
                  }}
                {{/form.element}}
              </div>
            </div> --}}
          {{!-- {{#if isEditing}}
              {{#bs-button onClick=(action 'cancelOfficer')}}Cancel{{/bs-button}}
              {{bs-button defaultText="Submit" type="primary" buttonType="submit"}}
              {{#bs-button onClick=(action 'deleteOfficer') class='pull-right btn-danger'}}Delete{{/bs-button}}
          {{else}}
            {{#bs-button onClick=(action 'editOfficer')}}Edit{{/bs-button}}
          {{/if}} --}}
          {{#if model.permissions.write}}
            {{#form.element}}
            <ul class='list-inline'>
              <li>{{#bs-button onClick=(action 'activateOfficer') disabled=false}}Activate{{/bs-button}}</li>
              <li>{{#bs-button onClick=(action 'deactivateOfficer') disabled=false}}Deactivate{{/bs-button}}</li>
              <li class='pull-right'>{{#bs-button onClick=(action 'deleteOfficer') type='danger' }}Delete{{/bs-button}}</li>
            </ul>
            {{/form.element}}
          {{/if}}
        {{/bs-form}}
      </section>
    </div>
  </div>
</section>