<section class='py-4'>
  <div class='card'>
    <div class='card-header'>
      {{!-- <ul class='list-inline float-right'>
        <li class='list-inline-item'>{{#bs-button disabled=isPrevDisabled onClick=(action 'previousItem' model)}}Previous{{/bs-button}}</li>
        <li class='list-inline-item'>{{#bs-button disabled=isNextDisabled onClick=(action 'nextItem' model)}}Next{{/bs-button}}</li>
      </ul> --}}
      <h4>
        {{model.kind}} Session
      </h4>
    </div>
    <div class='card-body'>
      {{#bs-nav type='tabs' as |nav|}}
        {{#nav.item}}
          {{#nav.link-to "dashboard.conventions.convention.sessions.session.details"}}Details{{/nav.link-to}}
        {{/nav.item}}
        {{#nav.item}}
          {{#nav.link-to "dashboard.conventions.convention.sessions.session.contests"}}Contests{{/nav.link-to}}
        {{/nav.item}}
        {{#nav.item}}
          {{#nav.link-to "dashboard.conventions.convention.sessions.session.entries"}}Entries{{/nav.link-to}}
        {{/nav.item}}
        {{#nav.item}}
          {{#nav.link-to "dashboard.conventions.convention.sessions.session.draw"}}Draw{{/nav.link-to}}
        {{/nav.item}}
        {{#nav.item}}
          {{#nav.link-to "dashboard.conventions.convention.sessions.session.reports"}}Reports{{/nav.link-to}}
        {{/nav.item}}
        {{#nav.item}}
          {{#nav.link-to "dashboard.conventions.convention.sessions.session.rounds"}}Rounds{{/nav.link-to}}
        {{/nav.item}}
      {{/bs-nav}}
      {{outlet}}
    </div>
    <div class='card-footer'>
      <ul class='list-inline'>
        {{#if (eq model.status 'New')}}
          <li class='list-inline-item'>{{session-build model=model}}</li>
        {{else if (eq model.status 'Built')}}
          <li class='list-inline-item'>{{session-open model=model}}</li>
        {{else if (eq model.status 'Opened')}}
          <li class='list-inline-item'>{{session-close model=model}}</li>
        {{else if (eq model.status 'Closed')}}
          <li class='list-inline-item'>{{session-verify model=model}}</li>
        {{else if (eq model.status 'Verified')}}
          <li class='list-inline-item'>{{session-start model=model}}</li>
        {{/if}}
        <li class='list-inline-item float-right'>Session Status: <strong>{{model.status}}</strong></li>
      </ul>
    </div>
  </div>
</section>
