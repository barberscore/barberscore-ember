<section>
  {{#unless (eq model.status 'Finished')}}
    <h4>
      Finishers are determined when the Round is finished.
    </h4>
  {{else}}
    <div class='row'>
      <div class='col-md-12'>
        <table class='table'>
          <thead>
            <tr>
              <th class='col-md-1'>Rank</th>
              <th class='col-md-4'>Name</th>
              <th class='col-md-1'>Points</th>
            </tr>
          </thead>
            <tbody>
              {{#each sortedFinishers as |appearance|}}
                <tr>
                  <td>{{appearance.entry.totRank}}</td>
                  <td>{{appearance.entry.group.name}}</td>
                  <td>{{appearance.entry.totPoints}}</td>
                </tr>
              {{else}}
                <tr>
                  <td>(No entries.)</td>
                </tr>
              {{/each}}
            </tbody>
        </table>
        {{#bs-button type='success'}}Add to Draw{{/bs-button}}
      </div>
    </div>
  {{/unless}}
</section>