<section>
  {{bread-crumbs tagName="ol" outputStyle="bootstrap" linkable=true}}
</section>
<section>
  <div class='panel panel-default'>
    <div class='panel-heading'>
      <h4 class='pull-right'>
        Status: <strong>{{model.status}}</strong>
      </h4>
      <h4>
        {{model.nomen}}
      </h4>
    </div>
    <div class='panel-body'>
      <section>
        {{#bs-form formLayout="vertical" model=model onSubmit=(action "saveChart") as |form|}}
          {{form.element controlType='text' placeholder='Title' disabled=isDisabled property='title'}}
          {{form.element controlType='text' placeholder='BHS ID' disabled=true property='bhs_id'}}
          {{form.element controlType='textarea' placeholder='Arrangers' disabled=isDisabled property='arrangers'}}
          {{form.element controlType='textarea' placeholder='Composers' disabled=isDisabled property='composers'}}
          {{form.element controlType='textarea' placeholder='Lyricists' disabled=isDisabled property='lyricists'}}
          {{form.element controlType='textarea' placeholder='Copyright Holders' disabled=isDisabled property='holders'}}
          {{#if model.permissions.write}}
            {{#form.element}}
              {{#if isEditing}}
                {{#bs-button onClick=(action 'cancelChart')}}Cancel{{/bs-button}}
                {{#bs-button type="primary" buttonType="submit"}}Save{{/bs-button}}
              {{else}}
                {{#bs-button onClick=(action 'editChart')}}Edit{{/bs-button}}
              {{/if}}
            {{/form.element}}
          {{/if}}
        {{/bs-form}}
      </section>
    </div>
  </div>
</section>