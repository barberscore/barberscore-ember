<section>
  {{bread-crumbs tagName="ol" outputStyle="bootstrap" linkable=true}}
</section>
<section>
  <div class='table-responsive'>
    <table class='table'>
      <caption>Current Organization</caption>
      <thead>
        <tr>
          <th {{action 'sortBy' 'name'}}>Name</th>
          <th {{action 'sortBy' 'kindSort'}}>Kind</th>
          <th {{action 'sortBy' 'status'}}>Status</th>
        </tr>
      </thead>
      <tbody>
        {{#each sortedOrganizations as |organization|}}
          <tr>
            <td>{{#link-to 'dashboard.organization-manager.organization.details' organization}}{{organization.name}}{{/link-to}}</td>
            <td>{{organization.kind}}</td>
            <td>{{organization.status}}</td>
          </tr>
        {{else}}
          <tr>
            <td>(None)</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
<section>
  <h4>
    <strong>Note:</strong> If you need to create a new Organization please contact the SCJC Chair.
  </h4>
</section>