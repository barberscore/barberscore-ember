<section>
    <ol class='breadcrumb'>
      <li>{{#link-to 'admin'}}Admin{{/link-to}}</li>
      <li>{{#link-to 'admin.awards'}}Awards{{/link-to}}</li>
      <li class='active'>{{model.name}}</li>
    </ol>
</section>
<section class='panel panel-default'>
  <div class='panel-heading'>
    <h4>
      Award Detail
    </h4>
  </div>
  <div class='panel-body'>
  {{#if isEditing}}
    {{#bs-form action="saveAward"}}
      {{#bs-form-group}}
        {{bs-input value=model.name placeholder='Award Name'}}
      {{/bs-form-group}}
      {{#bs-form-group}}
        {{#power-select
          options=seasonChoices
          placeholder='Season award conferred'
          selected=model.season
          onchange=(action (mut model.season))
          allowClear=true
          as |season|
        }}
          {{season}}
        {{/power-select}}
      {{/bs-form-group}}
      {{bs-button defaultText="Save" type="primary" buttonType="submit"}}
      {{#bs-button action=(action 'cancelAward')}}Cancel{{/bs-button}}
      {{#bs-button action=(action 'deleteAward') class='pull-right btn-danger'}}Delete{{/bs-button}}
    {{/bs-form}}
  {{else}}
      <p>
        <strong>Name: </strong>{{model.name}}
      </p>
      <p>
        <strong>Status: </strong>{{model.status}}
      </p>
      <p>
        <strong>Kind: </strong>{{model.kind}}
      </p>
      <p>
        <strong>Season: </strong>{{model.season}}
      </p>
      {{#bs-button action=(action 'editAward')}}Edit{{/bs-button}}
      {{#bs-button action=(action 'newAward') class='btn-primary pull-right'}}New{{/bs-button}}
    {{/if}}
  </div>
</section>
