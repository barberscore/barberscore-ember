<section>
    <ol class='breadcrumb'>
      <li>{{#link-to 'admin'}}Admin{{/link-to}}</li>
      <li>{{#link-to 'admin.organizations'}}Organizations{{/link-to}}</li>
      <li class='active'>{{model.name}}</li>
    </ol>
</section>
<section class='panel panel-default'>
  <div class='panel-heading'>
    <h4>
      Organization Detail
    </h4>
  </div>
  <div class='panel-body'>
  {{#if isEditing}}
    {{#bs-form action="saveOrganization"}}
      {{#bs-form-group}}
        {{bs-input value=model.name placeholder='Organization Name'}}
      {{/bs-form-group}}
      {{#bs-form-group}}
        {{bs-input value=model.website placeholder='Website'}}
      {{/bs-form-group}}
      {{#bs-form-group}}
        {{bs-input value=model.location placeholder='Location'}}
      {{/bs-form-group}}
      {{#bs-form-group}}
        {{bs-input value=model.email placeholder='Email Address'}}
      {{/bs-form-group}}
      {{bs-button defaultText="Save" type="primary" buttonType="submit"}}
      {{#bs-button action=(action 'cancelOrganization')}}Cancel{{/bs-button}}
      {{#bs-button action=(action 'deleteOrganization') class='pull-right btn-danger'}}Delete{{/bs-button}}
    {{/bs-form}}
  {{else}}
      <p>
        <strong>Name: </strong>{{model.name}}
      </p>
      <p>
        <strong>Website: </strong><a href='{{model.website}}'>{{model.website}}</a>
      </p>
      <p>
        <strong>Location: </strong>{{model.location}}
      </p>
      <p>
        <strong>Contact: </strong>{{model.email}}
      </p>
      {{#bs-button action=(action 'editOrganization')}}Edit{{/bs-button}}
      {{#bs-button action=(action 'newOrganization') class='btn-primary pull-right'}}New{{/bs-button}}
    {{/if}}
  </div>
</section>
<section>
 {{#bs-accordion selected=selected}}
     {{#bs-accordion-item value="1" title="Awards"}}
        <table class='table'>
          <thead>
            <tr>
              <th>Name</th>
              <th>Season</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each sortedAwards as |award|}}
              <tr>
                <td>
                  {{#link-to 'admin.awards.award' award}}{{award.name}}{{/link-to}}
                </td>
                <td>
                  {{award.season}}
                </td>
                <td>
                  {{award.status}}
                </td>
                <td>
                  {{#bs-dropdown}}
                    {{#bs-dropdown-button size='sm'}}Actions <span class="caret"></span>{{/bs-dropdown-button}}
                    {{#bs-dropdown-menu}}
                      <li><a href='#'>Delete</a></li>
                    {{/bs-dropdown-menu}}
                  {{/bs-dropdown}}
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
        {{!-- {{add-role group=model}} --}}
     {{/bs-accordion-item}}
 {{/bs-accordion}}
</section>
