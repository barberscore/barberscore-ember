<section>
    <ol class='breadcrumb'>
      <li>{{#link-to 'admin'}}Admin{{/link-to}}</li>
      <li>{{#link-to 'admin.conventions'}}Conventions{{/link-to}}</li>
      <li>{{#link-to 'admin.conventions.convention' model.session.convention}}{{model.session.convention.name}}{{/link-to}}</li>
      <li>{{#link-to 'admin.conventions.convention.session' model.session}}{{model.session.kind}} Session{{/link-to}}</li>
      <li class='active'>{{model.kind}}</li>
    </ol>
</section>
<h3>
  Announcements
</h3>
<h4>{{model.name}}</h4>
<section>
<h3>
Evaluations
</h3>
<ul class='list-unstyled'>
  <li>Evauations Start</li>
  <li>Minutes per Round</li>
  <li>Contestants per Round</li>
  <li>2 Round Start</li>
  <li>Locations</li>
</ul>
</section>
<section>
<h3>
Administration
</h3>
<ul class='list-unstyled'>
  <li>CSA</li>
  <li>Audio Recordings</li>
  <li>Video Recordings</li>
</ul>
</section>
<section>
<h3>
Awards
</h3>
<ul class='list-unstyled'>
  {{#each model.session.contests as |contest|}}
    <li>{{contest.award.name}}: {{contest.champion.performer.group.name}} {{contest.champion.total_points}} {{single-fixed contest.champion.total_score}}</li>
    <ul>
    {{#each (take 3 (sort-by 'rank' contest.contestants)) as |contestant|}}
      <li>{{contestant.rank}}: {{contestant.performer.group.name}} {{contestant.total_points}} {{single-fixed contestant.total_score}}</li>
    {{/each}}
    </ul>
  {{/each}}
</ul>
</section>
{{#if sortedPerformances}}
<section>
<h3>
Draw
</h3>
<ul class='list-unstyled'>
{{#each sortedPerformances as |performance|}}
  <li>{{performance.slot}}: {{performance.performer.group.name}}</li>
{{/each}}
</ul>
</section>
{{/if}}
