<section>
    <ol class='breadcrumb'>
      <li>{{#link-to 'admin'}}Admin{{/link-to}}</li>
      <li class='active'>Conventions</li>
    </ol>
</section>
<section>
  <div>
    <table class='table'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |convention|}}
          <tr>
          <td>{{#link-to 'admin.conventions.convention' convention}}{{convention.name}}{{/link-to}}</td>
          <td>{{date-range convention.date}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    {{add-convention}}
  </div>
</section>
