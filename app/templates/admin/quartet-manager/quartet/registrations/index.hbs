<section>
  <div class='row'>
    <div class='col-md-6'>
      <div class='table-responsive'>
        <table class='table'>
          <thead>
            <tr>
              <th class='col-md-11'>Registration</th>
              <th class='col-md-1'>Delete</th>
            </tr>
          </thead>
          <tbody>
            {{#each model.performers as |performer|}}
              <tr>
                <td>
                  {{#link-to 'admin.quartet-manager.quartet.registrations.registration' performer}}{{performer.session.nomen}}{{/link-to}}
                </td>
                <td>
                  {{fa-icon 'times-circle' click=(action 'deletePerformer' performer) class='text-danger'}}
                </td>
              </tr>
            {{/each}}
          </tbody>
          <tfoot>
            <tr>
              <td>
                {{#power-select
                  options=sessionOptions
                  selected=session
                  onchange=(action (mut session))
                  placeholder="Choose Session"
                  allowClear=true
                  as |session|
                }}
                  {{session.nomen}}
                {{/power-select}}
              </td>
              <td>
                {{fa-icon 'plus-circle' click=(action 'createPerformer') class='text-success'}}
              </td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</section>
