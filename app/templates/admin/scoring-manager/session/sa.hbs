<section>
  <h3>
    Judging Scoring Analysis
  </h3>
  <h4>
    {{model.convention.name}}, {{model.convention.start_date}}
  </h4>
  <h4>
    {{model.name}}
  </h4>
</section>
<section>
  {{x-toggle showLabels=true offLabel='Points' onLabel='Score' toggle='letsGo'}}
  <div class='table-responsive'>
    <table class='table'>
      <thead>
        <tr>
          <th>Rank</th>
          <th>Name</th>
          <th>Songs</th>
          <th class='text-right'>MUS</th>
          <th class='text-right'>PRS</th>
          <th class='text-right'>SNG</th>
          <th class='text-right'>Total</th>
          {{#each model.sortedAssignments as |assignment|}}
            {{#unless (eq assignment.category 'Admin')}}
              <th class='text-right'>{{assignment.designation}}</th>
            {{/unless}}
          {{/each}}
        </tr>
      </thead>
      <tbody>
      {{#each model.sortedPerformers as |performer|}}
        <tr>
          <td>
            {{performer.performerscore.rank}}
          </td>
          <td>
            {{performer.group.name}}<br>
            {{#if (eq performer.group.kind 'Chorus')}}{{performer.group.chapter.name}}{{/if}}
          </td>
          <td>
            {{#each performer.performances as |performance|}}
              {{#each performance.songs as |song|}}
                {{truncate-text song.submission.title limit=50}}<br>
              {{/each}}
              {{#if (not-eq performer.performances.length 1)}}<em>{{performance.round.kind}}</em><br>{{/if}}
            {{/each}}
            <strong>Total</strong>
          </td>
          <td class='text-right'>
            {{#each performer.performances as |performance|}}
              {{#each performance.songs as |song|}}
                {{#if isRaw}}{{song.songscore.mus_points}}{{else}}{{song.Æ’}}{{/if}}<br>
              {{/each}}
              {{#if (not-eq performer.performances.length 1)}}<em>{{#if isRaw}}{{performance.performancescore.mus_points}}{{else}}{{performance.performancescore.mus_score}}{{/if}}</em><br>{{/if}}
            {{/each}}
            <strong>{{#if isRaw}}{{performer.performerscore.mus_points}}{{else}}{{performer.performerscore.mus_score}}{{/if}}</strong><br>
          </td>
          <td class='text-right'>
            {{#each performer.performances as |performance|}}
              {{#each performance.songs as |song|}}
                {{#if isRaw}}{{song.songscore.prs_points}}{{else}}{{song.songscore.prs_score}}{{/if}}<br>
              {{/each}}
              {{#if (not-eq performer.performances.length 1)}}<em>{{#if isRaw}}{{performance.performancescore.prs_points}}{{else}}{{performance.performancescore.prs_score}}{{/if}}</em><br>{{/if}}
            {{/each}}
            <strong>{{#if isRaw}}{{performer.performerscore.prs_points}}{{else}}{{performer.performerscore.prs_score}}{{/if}}</strong><br>
          </td>
          <td class='text-right'>
            {{#each performer.performances as |performance|}}
              {{#each performance.songs as |song|}}
                {{#if isRaw}}{{song.songscore.sng_points}}{{else}}{{song.songscore.sng_score}}{{/if}}<br>
              {{/each}}
              {{#if (not-eq performer.performances.length 1)}}<em>{{#if isRaw}}{{performance.performancescore.sng_points}}{{else}}{{performance.performancescore.sng_score}}{{/if}}</em><br>{{/if}}
            {{/each}}
            <strong>{{#if isRaw}}{{performer.performerscore.sng_points}}{{else}}{{performer.performerscore.sng_score}}{{/if}}</strong><br>
          </td>
          <td class='text-right'>
            {{#each performer.performances as |performance|}}
              {{#each performance.songs as |song|}}
                {{#if isRaw}}{{song.songscore.total_points}}{{else}}{{song.songscore.total_score}}{{/if}}<br>
              {{/each}}
              {{#if (not-eq performer.performances.length 1)}}<em>{{#if isRaw}}{{performance.performancescore.total_points}}{{else}}{{performance.performancescore.total_score}}{{/if}}</em><br>{{/if}}
            {{/each}}
            <strong>{{#if isRaw}}{{performer.performerscore.total_points}}{{else}}{{performer.performerscore.total_score}}{{/if}}</strong><br>
          </td>
          {{#each model.sortedAssignments as |assignment|}}
            {{#unless (eq assignment.category 'Admin')}}
              <td class='text-right'>
                {{#each performer.performances as |performance|}}
                  {{#each performance.songs as |song|}}
                    {{#each song.scores as |score|}}
                      {{#if (eq score.assignment.id assignment.id)}}{{score.points}}<br>{{/if}}
                    {{/each}}
                  {{/each}}
                {{/each}}
              </td>
            {{/unless}}
          {{/each}}
        </tr>
      {{/each}}
      </tbody>
    </table>
  </div>
</section>
<section>
  <h4>Assignments</h4>
    <ul class='list-unstyled'>
      {{#each model.sortedAssignments as |assignment|}}
        <li>{{assignment.designation}}: {{assignment.judge.person.common_name}}</li>
      {{/each}}
    </ul>
</section>
