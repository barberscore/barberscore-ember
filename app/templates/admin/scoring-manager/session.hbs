<section>
  <div class='panel panel-default'>
    <div class='panel-heading'>
      <h4 {{action 'collapseHeader'}}>
        {{#if isCollapsed}}{{fa-icon 'caret-right'}}{{else}}{{fa-icon 'caret-down'}}{{/if}}&nbsp;{{model.nomen}}: {{model.status}}
      </h4>
      <ul class='list-inline'>
        <li>{{#link-to 'admin.scoring-manager.session.rounds' model}}Rounds{{/link-to}}</li>
        <li>{{#link-to 'admin.scoring-manager.session.reports' model}}Reports{{/link-to}}</li>
      </ul>
    </div>
    {{#bs-collapse collapsed=isCollapsed}}
      <div class='panel-body'>
        {{#bs-form-group}}
          {{#bs-button-group as |bg|}}
            {{#bg.button onChange=(action 'validateCurrent') class='form-group'}}Validate {{model.current.kind}}{{/bg.button}}
            {{#bg.button onChange=(action 'startCurrent') class='form-group'}}Start {{model.current.kind}}{{/bg.button}}
            {{#bg.button onChange=(action 'finishCurrent') class='form-group'}}Finish {{model.current.kind}}{{/bg.button}}
            {{#bg.button onChange=(action 'publishCurrent') class='form-group'}}Publish {{model.current.kind}}{{/bg.button}}
          {{/bs-button-group}}
        {{/bs-form-group}}
        {{#bs-form-group}}
          {{select-round rounds=model.rounds current=model.current model=model}}
        {{/bs-form-group}}
      </div>
    {{/bs-collapse}}
  </div>
</section>
<section>
  {{outlet}}
</section>
