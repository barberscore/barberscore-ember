<section>
  <div class='panel panel-default'>
    <div class='panel-heading'>
      <h4>
        {{model.nomen}}
      </h4>
    </div>
    <div class='panel-body'>
      <div class='row'>
        <div class='col-md-6'>
          <table class='table'>
            <thead>
              <tr>
                <th class='col-md-4'>Name</th>
                <th class='col-md-2'>Category</th>
                <th class='col-md-1'>Delete</th>
              </tr>
            </thead>
            <tbody>
              {{#each sortedAssignments as |assignment|}}
                  <tr class="{{if assignment.isDeleted 'danger' 'default'}}">
                  <td>
                    {{#if assignment.isNew}}
                      {{#power-select
                        options=adminOptions
                        search=(perform searchTask)
                        selected=assignment.person
                        onchange=(action (mut assignment.person))
                        placeholder="Enter Assignment by Name"
                        allowClear=true
                        as |person|
                      }}
                        {{person.common_name}}
                      {{/power-select}}
                    {{else}}
                      {{assignment.person.common_name}}
                    {{/if}}
                  </td>
                  <td>
                    {{#if assignment.isNew}}
                      {{#power-select
                            options=assignment.kindOptions
                            selected=assignment.kind
                            onchange=(action (mut assignment.kind))
                            placeholder="Choose Kind"
                            allowClear=true
                            as |kind|
                      }}
                        {{kind}}
                      {{/power-select}}
                    {{else}}
                      {{assignment.kind}}
                    {{/if}}
                  </td>
                  <td>{{#if assignment.isDeleted}}{{fa-icon 'undo' click=(action 'undoAssignment' assignment)}}{{else}}{{fa-icon 'times-circle' click=(action 'deleteAssignment' assignment)}}{{/if}}</td>
                </tr>
              {{else}}
                <tr>
                  <td>No assignments</td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  {{#bs-button type='primary' onClick=(action 'saveAssignments')}}Save{{/bs-button}}
  {{#bs-button type='default' onClick=(action 'cancelAssignments')}}Cancel{{/bs-button}}
  {{#bs-button type='success' onClick=(action 'newAssignment')}}New{{/bs-button}}
</section>
