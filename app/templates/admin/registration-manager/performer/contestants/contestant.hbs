<section>
  <div class='panel panel-default'>
    <div class='panel-heading'>
      <h4>
          Entrant Details: {{model.nomen}}
      </h4>
    </div>
    <div class='panel-body'>
      <div>
        {{#bs-form formLayout="vertical" model=model onSubmit=(action "savePerformer") as |form|}}
          {{#form.element property='is_private' as |el|}}
            {{#bs-button-group
              value=el.value
              type='radio'
              onChange=(action (mut el.value))
              as |bg|
            }}
              {{#bg.button type='default' value=false disabled=isDisabled}}Public Scores{{/bg.button}}
              {{#bg.button type='default' value=true disabled=isDisabled}}Private Scores{{/bg.button}}
            {{/bs-button-group}}
          {{/form.element}}
          {{#form.element property='is_evaluation' as |el|}}
            {{#bs-button-group
              value=el.value
              type='radio'
              onChange=(action (mut el.value))
              as |bg|
            }}
              {{#bg.button type='default' value=true disabled=isDisabled}}Yes Evaluation{{/bg.button}}
              {{#bg.button type='default' value=false disabled=isDisabled}}No Evaluation{{/bg.button}}
            {{/bs-button-group}}
          {{/form.element}}
          {{#form.element property='tenor' useIcons=false as |el|}}
              {{#power-select
                    search=(perform searchTask)
                    selected=el.value
                    onchange=(action (mut el.value))
                    placeholder="Enter Person Name"
                    disabled=isDisabled
                    allowClear=true
                    as |person|
              }}
                Tenor: {{person.common_name}}
              {{/power-select}}
          {{/form.element}}
          {{#form.element property='lead' useIcons=false as |el|}}
              {{#power-select
                    search=(perform searchTask)
                    selected=el.value
                    onchange=(action (mut el.value))
                    placeholder="Enter Person Name"
                    disabled=isDisabled
                    allowClear=true
                    as |person|
              }}
                Lead: {{person.common_name}}
              {{/power-select}}
          {{/form.element}}
          {{#form.element property='baritone' useIcons=false as |el|}}
              {{#power-select
                    search=(perform searchTask)
                    selected=el.value
                    onchange=(action (mut el.value))
                    placeholder="Enter Person Name"
                    disabled=isDisabled
                    allowClear=true
                    as |person|
              }}
                Baritone: {{person.common_name}}
              {{/power-select}}
          {{/form.element}}
          {{#form.element property='bass' useIcons=false as |el|}}
              {{#power-select
                    search=(perform searchTask)
                    selected=el.value
                    onchange=(action (mut el.value))
                    placeholder="Enter Person Name"
                    disabled=isDisabled
                    allowClear=true
                    as |person|
              }}
                Bass: {{person.common_name}}
              {{/power-select}}
          {{/form.element}}
          {{#if isEditing}}
              {{#bs-button onClick=(action 'cancelPerformer')}}Cancel{{/bs-button}}
              {{bs-button defaultText="Submit" type="primary" buttonType="submit"}}
              {{#bs-button onClick=(action 'deletePerformer') class='pull-right btn-danger'}}Delete{{/bs-button}}
          {{else}}
            {{#bs-button onClick=(action 'editPerformer')}}Edit{{/bs-button}}
          {{/if}}
        {{/bs-form}}
      </div>
    </div>
  </div>
</section>

