<section>
  {{bread-crumbs tagName="ol" outputStyle="bootstrap" linkable=true}}
</section>
<section>
  {{#power-select
    options=kindOptions
    selected=kind
    onchange=(action (mut kind))
    placeholder="Kind Filter"
    disabled=isDisabled
    allowClear=true
    as |kind|
  }}
    Kind: {{kind-transform kind}}
  {{/power-select}}
</section>
<section>
  <div class='table-responsive'>
    <table class='table'>
      <caption>Current Catalog</caption>
      <thead>
        <tr>
          <th {{action "sortBy" "title"}}>Title</th>
          <th {{action "sortBy" "status"}}>Status</th>
        </tr>
      </thead>
      <tbody>
        {{#each sortedItems as |catalog|}}
          <tr>
            <td>{{#link-to 'admin.catalog-manager.catalog.details' catalog}}{{catalog.title}}{{/link-to}}</td>
            <td>{{catalog.status}}</td>
          </tr>
        {{else}}
          <tr>
            <td>(None)</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
{{page-numbers content=content}}
