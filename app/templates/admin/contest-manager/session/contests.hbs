<section>
  <div class='panel panel-default'>
    <div class='panel-heading'>
      <h4 {{action 'collapseHeader'}}>
        {{#if isHeaderCollapsed}}{{fa-icon 'caret-right'}}{{else}}{{fa-icon 'caret-down'}}{{/if}}&nbsp;Contests
      </h4>
    </div>
    {{#bs-collapse collapsed=isHeaderCollapsed}}
    <div class='panel-body'>
      <table class='table'>
        <thead>
          <tr>
            <th class='col-md-4'>Name</th>
            {{!-- <th class='col-md-1'>Qualifier</th> --}}
            {{!-- <th class='col-md-5'>Champion</th> --}}
            <th class='col-md-1'>Contestants</th>
            <th class='col-md-1'>Delete</th>
          </tr>
        </thead>
        <tbody>
          {{#each model.sortedContests as |contest|}}
            <tr>
              <td>
                {{#link-to 'admin.contest-manager.session.contests.contest' contest}}{{contest.nomen}}{{/link-to}}
              </td>
              {{!-- <td>
                {{#if contest.is_qualifier}}{{fa-icon 'check-circle'}}{{/if}}
              </td> --}}
              {{!-- <td>
                {{contest.contestscore.champion}}
                {{contest.contestscore.champion model=contest.contestscore.champion=contest.contestscore.champion class='form-group'}}
              </td> --}}
              <td>
                {{contest.contestants.length}}
              </td>
              {{!-- <td>
                {{#bs-dropdown}}
                  {{#bs-dropdown-button size='sm'}}Actions <span class="caret"></span>{{/bs-dropdown-button}}
                  {{#bs-dropdown-menu}}
                    <li><a href='#' {{action 'deleteContest' contest}}>Delete</a></li>
                  {{/bs-dropdown-menu}}
                {{/bs-dropdown}}
              </td> --}}
              <td>
              {{fa-icon 'trash-o' click=(action 'deleteContest' contest)}}
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      {{add-award session=model}}
    </div>
    {{/bs-collapse}}
  </div>
</section>
<section>
  {{outlet}}
</section>