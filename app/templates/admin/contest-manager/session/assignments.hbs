<section>
  <div class='panel panel-default'>
    <div class='panel-heading'>
      <h4>
        Assignments
      </h4>
      {{#if isEditing}}
        {{#bs-button onClick=(action 'cancelEdits')}}Cancel{{/bs-button}}
        {{#bs-button onClick=(action 'saveEdits')}}Save{{/bs-button}}
      {{else}}
        {{#bs-button onClick=(action 'setEditing')}}Edit{{/bs-button}}
      {{/if}}
    </div>
      <div class='panel-body'>
        <table class='table'>
          <thead>
            <tr>
              <th>Assignment</th>
              <th>Judge</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            {{#each model.sortedAssignments as |assignment|}}
              <tr>
                <td>
                  {{assignment.nomen}}
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
  </div>
</section>
