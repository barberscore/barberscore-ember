<section>
  <div class='panel panel-default'>
    <div class='panel-heading'>
      <h4 {{action 'collapseHeader'}}>
        {{#if isHeaderCollapsed}}{{fa-icon 'caret-right'}}{{else}}{{fa-icon 'caret-down'}}{{/if}}&nbsp;Assignments
      </h4>
    </div>
    {{#bs-collapse collapsed=isHeaderCollapsed}}
      <div class='panel-body'>
        <table class='table'>
          <thead>
            <tr>
              {{!-- <th class='col-md-1'>Picture</th> --}}
              <th>Name</th>
              <th>Category</th>
              <th>Kind</th>
              <th>Status</th>
              {{!-- <th>Actions</th> --}}
            </tr>
          </thead>
          <tbody>
            {{#each model.sortedAssignments as |assignment|}}
              <tr>
                {{!-- <td>
                  {{person-picture person=assignment.judge.person}}
                </td> --}}
                <td>
                  {{#link-to 'admin.contest-manager.session.assignments.assignment' assignment}}{{assignment.judge.person.common_name}}{{/link-to}}
                </td>
                <td>
                  {{assignment.category}}
                </td>
                <td>
                  {{assignment.kind}}
                </td>
                <td>
                  {{assignment.status}}
                </td>
                {{!-- <td>
                  {{#bs-dropdown}}
                    {{#bs-dropdown-button size='sm'}}Actions <span class="caret"></span>{{/bs-dropdown-button}}
                    {{#bs-dropdown-menu}}
                      <li><a href='#' {{action 'scratchAssignment' assignment}}>Scratch</a></li>
                      <li><a href='#' {{action 'deleteAssignment' assignment}}>Delete</a></li>
                    {{/bs-dropdown-menu}}
                  {{/bs-dropdown}}
                </td> --}}
              </tr>
            {{/each}}
          </tbody>
        </table>
        {{add-assignment model=model}}
      </div>
    {{/bs-collapse}}
  </div>
</section>
<section>
  {{outlet}}
</section>