<section>
  <div class='panel panel-default'>
    <div class='panel-heading'>
      <h4>Entrants</h4>
    </div>
    <div class='panel-body'>
      <div class='table-responsive'>
        <table class='table'>
          <thead>
          <tr>
            <th{{action 'sortPerformersBy' 'group.chap_name:asc'}}>Performer</th>
              <th{{action 'sortPerformersBy' 'totPoints:desc'}}>Points</th>
              <th>Score</th>
            {{!-- <th>Actions</th> --}}
          </tr>
          </thead>
          <tbody>
            {{#each sortedPerformers as |performer|}}
              <tr>
                <td>{{#link-to 'admin.convention.session.performers.performer' performer}}{{performer.group.name}}{{/link-to}}</td>
                  <td>
                    {{performer.totPoints}}
                  </td>
                  <td>
                    {{performer.totScore}}
                  </td>
                <td>
                  {{#bs-dropdown}}
                    {{#bs-dropdown-button size='sm'}}Actions <span class="caret"></span>{{/bs-dropdown-button}}
                    {{#bs-dropdown-menu}}
                      <li><a href='#' {{action 'deletePerformer' performer}}>Delete</a></li>
                      <li><a href='#' {{action 'penalizeEligibility' performer}}>Penalty - Eligibility</a></li>
                      <li><a href='#' {{action 'penalizeTardy' performer}}>Penalty - Tardiness</a></li>
                      <li><a href='#' {{action 'penalizeCopyright' performer}}>Penalty - Copyright</a></li>
                      <li><a href='#' {{action 'penalizeStaging' performer}}>Penalty - Staging</a></li>
                    {{/bs-dropdown-menu}}
                  {{/bs-dropdown}}
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      {{add-performer session=model class='form-group'}}
    </div>
  </div>
</section>
<section>
  {{outlet}}
</section>