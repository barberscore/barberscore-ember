<h3>Contest Administrator</h3>
<div>
  <ol class='breadcrumb'>
    <li>{{#link-to 'admin'}}Conventions{{/link-to}}</li>
    <li>{{#link-to 'admin.convention' model.session.convention}}{{model.session.convention.name}}{{/link-to}}</li>
    <li>{{#link-to 'admin.convention.session' model.session}}{{model.session.kind}}{{/link-to}}</li>
    <li class='active'>{{model.kind}}</li>
  </ol>
</div>
<div>
<p>
{{model.name}}
</p>
</div>
<div>
<table class='table'>
  <thead>
  <tr>
  <th>Slot</th>
  <th>Performer</th>
  <th>Songs</th>
  {{#each model.session.judges as |judge|}}
    <th>{{judge.designation}}</th>
  {{/each}}
  </tr>
  </thead>
  <tbody>
  {{#each model.performances as |performance|}}
    <tr>
    <td>
      {{performance.slot}}<br>
      {{moment-format performance.start_dt 'LT'}}
    </td>
    <td>
      {{#link-to 'admin.convention.session.round.performance' performance}}{{performance.performer.group.name}}{{/link-to}}<br>
        {{performance.status}}
    </td>
    <td>
    {{#each performance.songs as |song|}}
      {{select-tune model=song tune=song.tune}}<br>
    {{/each}}
    </td>
    {{#each performance.round.session.judges as |judge|}}
      <td>
      {{#each judge.scores as |score|}}
        {{#if (eq score.song.performance.id performance.id)}}
          {{score-edit model=score points=score.points}}<br>
        {{/if}}
      {{/each}}
      </td>
    {{/each}}
    </tr>
  {{/each}}
  </tbody>
</table>
</div>
