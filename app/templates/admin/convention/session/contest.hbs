<section class='panel panel-default'>
  <div class='panel-heading'>
    <h3>
      Contest Details
    </h3>
  </div>
  <div class='panel-body'>
      <h4>
        {{model.name}}
      </h4>
        <div class='table-responsive'>
        <table class='table'>
          <thead>
          <tr>
            <th>Entrant</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>
          {{#each sortedContestants as |contestant|}}
            <tr>
            <td>{{contestant.performer.group.name}}</td>
            <td>{{contestant-status model=contestant status=contestant.status}}</td>
            <td>
              {{#bs-dropdown}}
                {{#bs-dropdown-button size='sm'}}Actions <span class="caret"></span>{{/bs-dropdown-button}}
                {{#bs-dropdown-menu}}
                  <li><a href='#' {{action 'deleteContestant' contestant}}>Delete</a></li>
                {{/bs-dropdown-menu}}
              {{/bs-dropdown}}
            </td>
            </tr>
          {{/each}}
          </tbody>
        </table>
          {{add-contestant-performer contest=model}}
        </div>
  </div>
</section>
