<div>
  <ol class='breadcrumb'>
    <li>{{#link-to 'admin'}}Conventions{{/link-to}}</li>
    <li>{{#link-to 'admin.convention' model.convention}}{{model.convention.name}}{{/link-to}}</li>
    <li class='active'>{{model.kind}}</li>
  </ol>
</div>
<section class='panel panel-default'>
  <div class='panel-heading'>
    <h3>
      Session Details
    </h3>
  </div>
  <div class='panel-body'>
      {{session-status model=model status=model.status class='form-group'}}
      {{contest-admin model=model person=model.administrator class='form-group'}}
      {{contest-aca model=model person=model.aca class='form-group'}}
  </div>
</section>
<section>
 {{#bs-accordion selected=selected collapsed=collapsed}}
     {{#bs-accordion-item value="2" title="Rounds"}}
        <table class='table'>
          <thead>
            <tr>
              <th>Name</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each model.rounds as |round|}}
              <tr>
                <td>
                  {{#link-to 'admin.convention.session.round' round}}{{round.kind}}{{/link-to}}
                </td>
                <td>
                  {{round-status model=round status=round.status}}
                </td>
                <td>
                  {{#bs-dropdown}}
                    {{#bs-dropdown-button size='sm'}}Actions <span class="caret"></span>{{/bs-dropdown-button}}
                    {{#bs-dropdown-menu}}
                      <li>{{#link-to "index"}}Something{{/link-to}}</li>
                      <li>{{#link-to "index"}}Something different{{/link-to}}</li>
                    {{/bs-dropdown-menu}}
                  {{/bs-dropdown}}
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
     {{/bs-accordion-item}}
     {{#bs-accordion-item value="3" title="Judges"}}
        <table class='table'>
          <thead>
            <tr>
              <th>Slot</th>
              <th>Judge</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each model.judges as |judge|}}
              <tr>
                <td>
                  {{judge.category}} {{judge.kind}} {{judge.slot}}
                </td>
                <td>
                  {{select-judge model=judge person=judge.person}}
                </td>
                <td>
                  {{judge-status model=judge status=judge.status}}
                </td>
                <td>
                  {{#bs-dropdown}}
                    {{#bs-dropdown-button size='sm'}}Actions <span class="caret"></span>{{/bs-dropdown-button}}
                    {{#bs-dropdown-menu}}
                      <li>{{#link-to "index"}}Something{{/link-to}}</li>
                      <li>{{#link-to "index"}}Something different{{/link-to}}</li>
                    {{/bs-dropdown-menu}}
                  {{/bs-dropdown}}
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
     {{/bs-accordion-item}}
     {{#bs-accordion-item value="1" title="Awards"}}
        <table class='table'>
          <thead>
            <tr>
              <th>Name</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each model.contests as |contest|}}
              <tr>
                <td>
                  {{#link-to 'admin.convention.session.contest' contest}}{{contest.award.name}}{{/link-to}}
                </td>
                <td>
                  {{contest-status model=contest status=contest.status}}
                </td>
                <td>
                  {{#bs-dropdown}}
                    {{#bs-dropdown-button size='sm'}}Actions <span class="caret"></span>{{/bs-dropdown-button}}
                    {{#bs-dropdown-menu}}
                      <li>{{#link-to "index"}}Something{{/link-to}}</li>
                      <li>{{#link-to "index"}}Something different{{/link-to}}</li>
                    {{/bs-dropdown-menu}}
                  {{/bs-dropdown}}
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
     {{/bs-accordion-item}}
     {{#bs-accordion-item value="4" title="Performers"}}
        <table class='table'>
          <thead>
            <tr>
              <th>Group</th>
              <th>Organization</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each sortedPerformers as |performer|}}
              <tr>
                <td>
                  {{#link-to 'admin.convention.session.performer' performer}}{{performer.group.name}}{{/link-to}}
                </td>
                <td>
                  {{#if (eq performer.group.kind 'Chorus')}}
                    {{select-organization model=performer organization=performer.organization}}
                  {{else}}
                    N/A
                  {{/if}}
                </td>
                <td>
                  {{performer-status model=performer status=performer.status}}
                </td>
                <td>
                  {{#bs-dropdown}}
                    {{#bs-dropdown-button size='sm'}}Actions <span class="caret"></span>{{/bs-dropdown-button}}
                    {{#bs-dropdown-menu}}
                      <li><a href='#' {{action 'deleteRecord' performer}}>Delete</a></li>
                    {{/bs-dropdown-menu}}
                  {{/bs-dropdown}}
                </td>
              </tr>
            {{/each}}
            {{add-performer session=model}}
          </tbody>
        </table>
     {{/bs-accordion-item}}
 {{/bs-accordion}}
</section>
