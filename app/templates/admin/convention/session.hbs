<section>
  <div class='panel panel-default'>
    <div class='panel-heading'>
      <h4 {{action 'collapseHeader'}}>
        {{#if isHeaderCollapsed}}{{fa-icon 'caret-right'}}{{else}}{{fa-icon 'caret-down'}}{{/if}}&nbsp;{{model.name}}: {{model.status}}
      </h4>
      <ul class='list-inline'>
        <li>{{#link-to 'admin.convention.session.judges' model}}Judges{{/link-to}}</li>
        <li>{{#link-to 'admin.convention.session.contests' model}}Contests{{/link-to}}</li>
        <li>{{#link-to 'admin.convention.session.performers' model}}Entrants{{/link-to}}</li>
        {{!-- <li>{{#link-to 'admin.convention.session.schedules' model}}Schedule{{/link-to}}</li> --}}
        <li>{{#link-to 'admin.convention.session.rounds' model}}OAs{{/link-to}}</li>
        <li>{{#link-to 'admin.convention.session.currents' model}}Scores{{/link-to}}</li>
        <li>{{#link-to 'admin.convention.session.reports' model}}Reports{{/link-to}}</li>
      </ul>
    </div>
    {{#bs-collapse collapsed=isHeaderCollapsed}}
      <div class='panel-body'>
        {{#bs-form-group}}
          {{#bs-button-group}}
            {{#bs-button action=(action 'openSession') class='form-group'}}Open {{model.kind}} Registration{{/bs-button}}
            {{#bs-button action=(action 'closeSession') class='form-group'}}Close {{model.kind}} Registration{{/bs-button}}
            {{#bs-button action=(action 'validateCurrent') class='form-group'}}Validate {{model.current.kind}}{{/bs-button}}
            {{#bs-button action=(action 'startCurrent') class='form-group'}}Start {{model.current.kind}}{{/bs-button}}
            {{#bs-button action=(action 'finishCurrent') class='form-group'}}Finish {{model.current.kind}}{{/bs-button}}
            {{#bs-button action=(action 'publishCurrent') class='form-group'}}Publish {{model.current.kind}}{{/bs-button}}
          {{/bs-button-group}}
        {{/bs-form-group}}
        {{#bs-form-group}}
          {{select-contest contests=model.contests primary=model.primary model=model}}
        {{/bs-form-group}}
        {{#bs-form-group}}
          {{select-round rounds=model.rounds current=model.current model=model}}
        {{/bs-form-group}}
        {{#bs-form-group}}
          {{select-performance performances=model.currentPerformances cursor=model.cursor model=model}}
        {{/bs-form-group}}
      </div>
    {{/bs-collapse}}
  </div>
</section>
<section>
  {{outlet}}
</section>
