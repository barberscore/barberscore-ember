              <th>Category</th>
              <th>Kind</th>
              <th>Status</th>
              {{!-- <th>Actions</th> --}}
            </tr>
          </thead>
          <tbody>
            {{#each model as |judge|}}
              <tr>
                {{!-- <td>
                  {{person-picture person=judge.certification.person}}
                </td> --}}
