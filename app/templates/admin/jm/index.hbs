{{bread-crumbs tagName="ol" outputStyle="bootstrap" linkable=true}}
<section>
  <div class='table-responsive'>
      <table class='table'>
        <thead>
          <tr>
            {{!-- <th class='col-md-1'>Picture</th> --}}
            <th {{action 'sortBy' 'person.name:asc'}}>Name</th>
            <th {{action 'sortBy' 'category:asc'}}>Category</th>
            <th {{action 'sortBy' 'kind:asc'}}>Kind</th>
            <th {{action 'sortBy' 'status:asc'}}>Status</th>
            {{!-- <th>Actions</th> --}}
          </tr>
        </thead>
        <tbody>
          {{#each sortedCertifications as |certification|}}
            <tr>
              {{!-- <td>
                {{person-picture person=judge.certification.person}}
              </td> --}}
              <td>
                {{#link-to 'admin.jm.certification' certification}}{{certification.person.name}}{{/link-to}}
              </td>
              <td>
                {{certification.category}}
              </td>
              <td>
                {{certification.kind}}
              </td>
              <td>
                {{certification.status}}
              </td>
              {{!-- <td>
                {{#bs-dropdown}}
                  {{#bs-dropdown-button size='sm'}}Actions <span class="caret"></span>{{/bs-dropdown-button}}
                  {{#bs-dropdown-menu}}
                    <li><a href='#' {{action 'scratchJudge' judge}}>Scratch</a></li>
                    <li><a href='#' {{action 'deleteJudge' judge}}>Delete</a></li>
                  {{/bs-dropdown-menu}}
                {{/bs-dropdown}}
              </td> --}}
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
</section>
{{outlet}}
