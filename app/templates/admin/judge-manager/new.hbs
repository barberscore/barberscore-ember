{{bread-crumbs tagName="ol" outputStyle="bootstrap" linkable=true}}
<section>
  <div class='panel panel-default'>
    <div class='panel-heading'>
      {{model-picture picture=model.person.picture}}
      <h4>
        {{model.name}}
      </h4>
    </div>
    <div class='panel-body'>
      {{#bs-form formLayout='vertical' model=model}}
        {{#bs-form-group}}
          {{#power-select
                search=(action "searchPerson")
                selected=model.person
                onchange=(action (mut model.person))
                placeholder="Enter Person Name"
                class='assignment-width'
                disabled=isDisabled
                allowClear=true
                as |person|
          }}
            {{person.name}}
          {{/power-select}}
        {{/bs-form-group}}
        {{#bs-form-group}}
          {{#power-select
            options=statusOptions
            placeholder='Status'
            disabled=isDisabled
            allowClear=true
            selected=model.status
            onchange=(action (mut model.status))
            as |status|
          }}
            {{status}}
          {{/power-select}}
        {{/bs-form-group}}
        {{#bs-form-group}}
          {{#power-select
            options=kindOptions
            placeholder='Kind'
            disabled=isDisabled
            allowClear=true
            selected=model.kind
            onchange=(action (mut model.kind))
            as |kind|
          }}
            {{kind}}
          {{/power-select}}
        {{/bs-form-group}}
        {{#bs-form-group}}
          {{#power-select
            options=categoryOptions
            placeholder='Category'
            disabled=isDisabled
            allowClear=true
            selected=model.category
            onchange=(action (mut model.category))
            as |kind|
          }}
            {{kind}}
          {{/power-select}}
        {{/bs-form-group}}
        {{#bs-form-group}}
          {{bootstrap-datepicker disabled=isDisabled placeholder="Start Date" class="form-control" value=model.start_date format='yyyy-mm-dd'}}
        {{/bs-form-group}}
        {{#bs-form-group}}
        {{bootstrap-datepicker disabled=isDisabled placeholder="End Date" class="form-control" value=model.end_date format='yyyy-mm-dd'}}
        {{/bs-form-group}}
      {{/bs-form}}
    </div>
    <div class='panel-footer'>
      {{#bs-form}}
        {{#bs-button type="primary" action=(action 'saveJudge')}}Save{{/bs-button}}
        {{#bs-button type="default" action=(action 'cancelJudge')}}Cancel{{/bs-button}}
      {{/bs-form}}
    </div>
  </div>
</section>
