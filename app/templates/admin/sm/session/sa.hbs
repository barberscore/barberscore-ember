<section>
  <h3>
    Judging Scoring Analysis
  </h3>
  <h4>
    {{model.convention.name}}, {{model.convention.start_date}}
  </h4>
  <h4>
    {{model.name}}
  </h4>
</section>
<section>
  {{x-toggle showLabels=true offLabel='Points' onLabel='Score' toggle='letsGo'}}
  <div class='table-responsive'>
    <table class='table'>
      <thead>
        <tr>
          <th>Rank</th>
          <th>Name</th>
          <th>Songs</th>
          <th class='text-right'>MUS</th>
          <th class='text-right'>PRS</th>
          <th class='text-right'>SNG</th>
          <th class='text-right'>Total</th>
          {{#each model.sortedAssignments as |assignment|}}
            {{#unless (eq assignment.category 'Admin')}}
              <th class='text-right'>{{assignment.designation}}</th>
            {{/unless}}
          {{/each}}
        </tr>
      </thead>
      <tbody>
      {{#each model.sortedPerformers as |performer|}}
        <tr>
          <td>
            {{performer.totRank}}
          </td>
          <td>
            {{performer.group.name}}<br>
            {{#if (eq performer.group.kind 'Chorus')}}{{performer.group.chapter.name}}{{/if}}
          </td>
          <td>
            {{#each performer.performances as |performance|}}
              {{#each performance.songs as |song|}}
                {{truncate-text song.submission.title limit=50}}<br>
              {{/each}}
              {{#if (not-eq performer.performances.length 1)}}<em>{{performance.round.kind}}</em><br>{{/if}}
            {{/each}}
            <strong>Total</strong>
          </td>
          <td class='text-right'>
            {{#each performer.performances as |performance|}}
              {{#each performance.songs as |song|}}
                {{#if isRaw}}{{song.musPoints}}{{else}}{{song.Æ’}}{{/if}}<br>
              {{/each}}
              {{#if (not-eq performer.performances.length 1)}}<em>{{#if isRaw}}{{performance.musPoints}}{{else}}{{performance.musScore}}{{/if}}</em><br>{{/if}}
            {{/each}}
            <strong>{{#if isRaw}}{{performer.musPoints}}{{else}}{{performer.musScore}}{{/if}}</strong><br>
          </td>
          <td class='text-right'>
            {{#each performer.performances as |performance|}}
              {{#each performance.songs as |song|}}
                {{#if isRaw}}{{song.prsPoints}}{{else}}{{song.prsScore}}{{/if}}<br>
              {{/each}}
              {{#if (not-eq performer.performances.length 1)}}<em>{{#if isRaw}}{{performance.prsPoints}}{{else}}{{performance.prsScore}}{{/if}}</em><br>{{/if}}
            {{/each}}
            <strong>{{#if isRaw}}{{performer.prsPoints}}{{else}}{{performer.prsScore}}{{/if}}</strong><br>
          </td>
          <td class='text-right'>
            {{#each performer.performances as |performance|}}
              {{#each performance.songs as |song|}}
                {{#if isRaw}}{{song.sngPoints}}{{else}}{{song.sngScore}}{{/if}}<br>
              {{/each}}
              {{#if (not-eq performer.performances.length 1)}}<em>{{#if isRaw}}{{performance.sngPoints}}{{else}}{{performance.sngScore}}{{/if}}</em><br>{{/if}}
            {{/each}}
            <strong>{{#if isRaw}}{{performer.sngPoints}}{{else}}{{performer.sngScore}}{{/if}}</strong><br>
          </td>
          <td class='text-right'>
            {{#each performer.performances as |performance|}}
              {{#each performance.songs as |song|}}
                {{#if isRaw}}{{song.totPoints}}{{else}}{{song.totScore}}{{/if}}<br>
              {{/each}}
              {{#if (not-eq performer.performances.length 1)}}<em>{{#if isRaw}}{{performance.totPoints}}{{else}}{{performance.totScore}}{{/if}}</em><br>{{/if}}
            {{/each}}
            <strong>{{#if isRaw}}{{performer.totPoints}}{{else}}{{performer.totScore}}{{/if}}</strong><br>
          </td>
          {{#each model.sortedAssignments as |assignment|}}
            {{#unless (eq assignment.category 'Admin')}}
              <td class='text-right'>
                {{#each performer.performances as |performance|}}
                  {{#each performance.songs as |song|}}
                    {{#each song.scores as |score|}}
                      {{#if (eq score.assignment.id assignment.id)}}{{score.points}}<br>{{/if}}
                    {{/each}}
                  {{/each}}
                {{/each}}
              </td>
            {{/unless}}
          {{/each}}
        </tr>
      {{/each}}
      </tbody>
    </table>
  </div>
</section>
<section>
  <h4>Assignments</h4>
    <ul class='list-unstyled'>
      {{#each model.sortedAssignments as |assignment|}}
        <li>{{assignment.designation}}: {{assignment.judge.person.common_name}}</li>
      {{/each}}
    </ul>
</section>
