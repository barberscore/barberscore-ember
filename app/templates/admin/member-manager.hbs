{{bread-crumbs tagName="ol" outputStyle="bootstrap" linkable=true}}
<div>
Pagination: {{page-numbers content=content}}
</div>
<section>
  <div class='table-responsive'>
        <table class='table'>
          <thead>
            <tr>
              <th class='col-md-1'>Picture</th>
          <th {{action 'sortBy' 'nomen:asc'}}>Name</th>
          <th {{action 'sortBy' 'status:asc'}}>Status</th>
              {{!-- <th>Actions</th> --}}
            </tr>
          </thead>
          <tbody>
            {{#each model as |person|}}
              <tr>
                <td>
                  {{model-picture picture=person.picture}}
                </td>
                <td>
                  {{#link-to 'admin.member-manager.member' person}}{{person.nomen}}{{/link-to}}
                </td>
                <td>
                  {{person.status}}
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
        {{!-- {{add-assignment model=model}} --}}
      </div>
  </section>
<section>
  {{outlet}}
</section>