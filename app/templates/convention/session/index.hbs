<div>
  <ol class='breadcrumb'>
    <li>{{#link-to 'conventions'}}Conventions{{/link-to}}</li>
    <li>{{#link-to 'convention' model.convention}}{{model.convention.name}}{{/link-to}}</li>
    <li class='active'>{{model.kind}}</li>
  </ol>
</div>
<div class='row'>
  {{#if (eq model.status 'Final')}}
  <div class='col-sm-6'>
  By Contest:
  <ul class='list-inline'>
    {{#each model.contests as |contest|}}
      <li>{{#link-to 'convention.session.contest' contest}}{{contest.award.name}}{{/link-to}}</li>
    {{/each}}
  </ul>
  </div>
  {{/if}}
  {{#if (lte model.status 'built')}}
  <div class='col-sm-6'>
    By Schedule:
  <ul class='list-inline'>
    {{#each model.rounds as |round|}}
      <li>{{#link-to 'convention.session.round' round}}{{round.kind}}{{/link-to}}</li>
    {{/each}}
  </ul>
  </div>
  {{/if}}
</div>
<p>
  {{outlet}}
</p>
